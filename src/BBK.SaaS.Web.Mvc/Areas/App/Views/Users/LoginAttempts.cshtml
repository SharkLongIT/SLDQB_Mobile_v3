@using BBK.SaaS.Web.Areas.App.Models.Users
@using Abp.Application.Services.Dto
@using BBK.SaaS.Web.Areas.App.Startup
@model UserLoginAttemptsViewModel
@{
	ViewBag.CurrentPageName = AppPageNames.Administrators.Users;
	ViewBag.PageTitle = @L("LoginAttempts");
	ViewBag.PageDescription = @L("LoginAttemptsHeaderInfo");
}
@section Scripts
{
    <script abp-src="/view-resources/App/Users/LoginAttempts.js" asp-append-version="true"></script>
}

<div class="page-body">
	<!-- Container-fluid starts-->
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-12">
				<div class="card">
					<div class="card-header">
						<h4>@L("Roles")</h4>
						<div class="card-header-right">
							<ul class="list-unstyled card-option">
								<li><i class="icon-more-alt"></i></li>
								<li><i class="view-html fa fa-code"></i></li>
								<li><i class="icofont icofont-maximize full-card"></i></li>
								<li><i class="icofont icofont-minus minimize-card"></i></li>
								<li><i class="icofont icofont-refresh reload-card"></i></li>
								<li><i class="icofont icofont-error close-card"></i></li>
							</ul>
						</div>
						<span>@L("UsersHeaderInfo")</span>
					</div>
					<div class="card-body common-flex">
						<!-- Put actions here -->
					</div>
					<div class="card-body">
						<div class="form">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="mb-3">
                            <label for="LoginAttemptsFilter" class="form-label">@L("Filter")</label>
                            <div class="input-group">
                                <input type="text" id="LoginAttemptsFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" value="">
                                <button id="GetLoginAttemptsButton" class="btn btn-primary" type="submit">
                                    <i class="flaticon-search-1" aria-label="@L("Search")"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="StartEndRange" class="form-label">@L("DateRange")</label>
                            <input id="StartEndRange" type="text" class="form-control date-range-picker"/>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label for="LoginResultFilter" class="form-label">@L("Result")</label>
                            @Html.DropDownList("LoginResultFilter", Model.LoginAttemptResults.Select(e => e.ToSelectListItem()), new {@class = "form-select", id = "LoginResultFilter"})
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-12 text-end">
                    <button id="RefreshLoginAttempts" class="btn btn-primary">
                        <i class="la la-refresh btn-md-icon"></i>
                        <span class="d-none d-md-inline-block">
                            @L("Refresh")
                        </span>
                    </button>
                </div>
            </div>
            <div class="align-items-center">
                <table id="LoginAttemptsTable" class="table align-middle table-row-dashed dataTable dtr-inline no-footer table-responsive theme-scrollbar user-datatable">
                    <thead>
                    <tr>
                        <th>@L("IpAddress")</th>
                        <th>@L("Client")</th>
                        <th>@L("Browser")</th>
                        <th>@L("Time")</th>
                        <th>@L("Result")</th>
                    </tr>
                    </thead>
                </table>
            </div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="@(await GetContainerClass())">
    <div class="card">
        <div class="card-body">
            
        </div>
    </div>
</div>