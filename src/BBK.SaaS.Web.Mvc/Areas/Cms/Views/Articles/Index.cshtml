@using Abp.Application.Services.Dto
@using BBK.SaaS.Authorization
@using BBK.SaaS.Mdls.Cms
@using BBK.SaaS.Web.Areas.App.Startup

@* @model TopicsType0ViewModel *@
@{
	ViewBag.CurrentTopicName = CmsPageNames.Administrators.Articles;	
	ViewBag.PageTitle = new FixedLocalizableString("Tin tức");
	ViewBag.PageDescription = new FixedLocalizableString("Tin tức theo chuyên mục");
}

@section Styles {
	@* <link rel="stylesheet" abp-href="/view-resources/App/Articles/index.css" asp-append-version="true" /> *@
}

@section Scripts {
	<script abp-src="/view-resources/Cms/Articles/Index.js" asp-append-version="true"></script>
}

<div class="page-body">
	<!-- Container-fluid starts-->
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-12">
				<div class="card">
					<div class="card-body">
						<div class="row align-items-center">
							<div class="col-md-6 mb-3">
								<div class="input-group">
									<input type="text" id="ArticlesTableFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" value="">
									<button id="GetArticlesButton" class="btn btn-primary" type="submit">
										<i class="flaticon-search-1" aria-label="@L("Search")"></i>
									</button>
								</div>
							</div>
							<div class="col-md-6 mb-3">
								<button id="CreateNewButton" class="btn btn-primary">
									<i class="fa fa-plus btn-md-icon"></i>
									<span class="d-none d-md-inline-block">
										@(new FixedLocalizableString("Tạo mới"))
									</span>
								</button>
							</div>
						</div>

						<div class="table-responsive theme-scrollbar">
							<table id="ArticlesTable" class="table align-middle table-row-dashed dataTable dtr-inline no-footer table-responsive theme-scrollbar user-datatable">
								<thead>
									<tr>
										<th>@(new FixedLocalizableString("Xử lý"))</th>
										<th>@(new FixedLocalizableString("Tiêu đề"))</th>
										<th>@(new FixedLocalizableString("Phát hành"))</th>
										<th>@L("StartDate")</th>
										<th>@L("EndDate")</th>
										<th>@(new FixedLocalizableString("Thời gian tạo"))</th>
									</tr>
								</thead>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>