@using Abp.Organizations
@using BBK.SaaS
@using BBK.SaaS.Web.Areas.App.Models.Common.Modals

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(L("NewWidget")))

<div class="modal-body">
	<form name="WidgetForm" role="form" novalidate class="form-validation">
		<div class="mb-3">
			<label for="Title" class="form-label">@L("Title")</label>
			<input id="Title" class="form-control" type="text" name="Title" required maxlength="@SaaSConsts.MaxSingleLineLength">
		</div>
		<div class="mb-3">
			<label for="OrderIndex" class="form-label">@L("OrderIndex")</label>
			<input id="OrderIndex" class="form-control" type="number" name="OrderIndex" value="0">
		</div>
		<div class="form-check checkbox checkbox-primary mb-0">
			<input class="form-check-input" id="Published" name="Published" type="checkbox" checked="checked" value="true">
			<label class="form-check-label" for="Published">Published</label>
		</div>
		<div class="mb-3 no-hint">
			<label for="HTMLContent" class="form-label">@L("HTMLContent")</label>
			<textarea id="HTMLContent" type="text" name="HTMLContent" class="form-control" rows="5" required maxlength="@SaaSConsts.MaxContent">

			<div class="container"><div class="row"><img src="https://storage.30shine.com/web/v4/images/ve-30shine/1.jpg" alt="" class="img-fluid"></div>
</div>
			</textarea>
		</div>
	</form>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")