@using Abp.Localization
@using BBK.SaaS.Web.Areas.App.Startup


@section Scripts
{
    <script abp-src="/view-resources/App/Common/_DynamicEntityPropertyManager.js" asp-append-version="true"></script>
    <script abp-src="/view-resources/Profile/Introduce/Index.js" asp-append-version="true"></script>
}

@{
    ViewBag.CurrentPageName = AppPageNames.Administrators.Users;
    ViewBag.PageTitle = "Liên kết giới thiệu";
    ViewBag.PageDescription = "Liên kết giới thiệu";
}
<div class="page-body">
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="card">
                <div class="card-body">
                    <div class="col-xl-12">
                        <div id="panel-1" class="panel">
                            <div class="panel-hdr">
                                <h2>
                                    <span class="fw-300"><i>Danh sách giới thiệu người lao động</i></span>
                                </h2>
                            </div>
                            <div class="panel-container show mt-5">
                                <div class="panel-content">
                                    <div class="card-wrapper border rounded-3 light-card checkbox-checked">
                                        <div class="row ">
                                            <div class="col-lg-10">
                                                <div class="row">
                                                    <div class="col-lg-5 col-md-5 mb-3">
                                                        <input type="text" id="SearchTerm" name="SearchTerm" placeholder="@(new FixedLocalizableString("Tên tin tức/Tên liên hệ"))" class="form-control">
                                                    </div>
                                                    <div class="col-lg-5 col-md-5 mb-3 mt-auto">
                                                        <select required class="form-select" id="Status" name="Status">
                                                            <option value="0" selected>Trạng thái</option>
                                                            <option value="1" >Chờ xử lý</option>
                                                            <option value="2" >Đã xử lý</option>
                                                            <option value="3">Không liên lạc được</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-2 d-flex align-items-end justify-content-end">
                                                <button class="btn btn-primary ml-auto waves-effect waves-themed mb-3" id="Search" type="button">@(new FixedLocalizableString("Tìm kiếm"))</button>
                                            </div>
                                        </div>
                                    </div>


                                    <!-- datatable start -->
                                    <div class="mt-5">
                                        <table id="IntroduceTable" class="table table-bordered table-hover table-striped w-100 mt-5">
                                            <thead class="bg-primary-600">
                                                <tr>
                                                    <th>STT</th>
                                                    <th>Tên tin tức</th>
                                                    <th>Tên liên hệ</th>
                                                    <th>SĐT</th>
                                                    <th>Email</th>
                                                    @* <th>@L("Người giới thiệu")</th> *@
                                                    <th>Ngày giới thiệu</th>
                                                    <th>Trạng thái</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                               
                                    <!-- datatable end -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>