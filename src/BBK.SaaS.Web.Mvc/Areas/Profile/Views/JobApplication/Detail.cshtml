														<p style="margin-bottom: 16px;  color: #7a70ba;">
															@Model.JobApplication.Province.DisplayName
														</p>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						@if (Model.JobApplication.WorkExperiences != null && Model.JobApplication.WorkExperiences.Count > 0)
						{
							<div class="col-sm-12">
								<h3 style="color:black;"><i class="icofont icofont-building-alt me-2" style="Color:#7a70ba;"></i><b>@L("Kinh nghiệm làm việc")</b></h3>
								<hr>
								<div class="col-sm-12">
									<div class="card">
										<div class="profile-img-style">
											<div class="row">
											</div>
											<div class="row">
												<div class="col-xl-12">
													<div class="row">
														<div class="col-lg-12">
															@{
																int index = 0;
															}
															@foreach (var item in Model.JobApplication.WorkExperiences)
															{

																@if (index > 0)
																{
																	<hr></hr>
																}
																index++;
																<h6 class="mb-2 text-dark"></h6>

																<h5><b>@item.Positions</b></h5>
																<h6 class="mb-2 text-dark"></h6>

																<h6><b>@item.CompanyName</b></h6>
																<div class="block mt-2 mb-3 text-12 text-se-neutral-64 font-medium"><span>@item.StartTime.ToShortDateString()</span><span class="mx-1">-</span><span>@item.EndTime.ToShortDateString()</span></div>
																<div class="m-5 description">
																	@item.Description
																</div>
															}
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>

						}
						@if (Model.JobApplication.LearningProcess != null && Model.JobApplication.LearningProcess.Count > 0)
						{
							<div class="col-sm-12">
								<h3 style="color:black;"><i class="icofont icofont-briefcase-alt-1 me-2" style="Color:#7a70ba;"></i> <b>@L("Trình độ học vấn")</b></h3>
								<hr>
								<div class="col-sm-12">
									<div class="card">
										<div class="profile-img-style">
											<div class="row">
											</div>
											<div class="row">
												<div class="col-xl-12">
													<div class="row">
														<div class="col-lg-12">
															@{
																int index = 0;
															}
															@foreach (var item in Model.JobApplication.LearningProcess)
															{

																@if (index > 0)
																{
																	<hr></hr>
																}
																index++;
																<h6 class="mb-2 text-dark"></h6>

																<h5><b>@item.AcademicDiscipline</b></h5>
																<h6 class="mb-2 text-dark"></h6>

																<h6><b>@item.SchoolName</b></h6>
																<div class="block mt-2 mb-3 text-12 text-se-neutral-64 font-medium"><span>@item.StartTime.ToShortDateString()</span><span class="mx-1">-</span><span>@item.EndTime.ToShortDateString()</span></div>
																<div class="m-5 description">
																	@item.Description
																</div>
															}
														</div>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						}

					</div>
				</div>
			</div>
		</div>
	</div>
</div>

