
<form class="row g-3 mt-3" name="WorkExperience">
  <input name="Id" id="WorkExperienceId" hidden>
  <div class="col-lg-6 col-md-12">
    <label class="form-label" for="Positions">Vị trí công việc</label>
    <input class="form-control" id="Positions" name="Positions" type="text" required="required" placeholder="Nhập vị trí công việc">
  </div>
  <div class="col-lg-3 col-md-6">
    <label class="form-label" for="StartTime">Thời gian bắt đầu</label>
    <input class="form-control" id="StartTime" name="StartTime" type="date" required="required">
  </div>
  <div class="col-lg-3 col-md-6">
    <label class="form-label" for="EndTime">Thời gian kết thúc</label>
    <input class="form-control" id="EndTime" name="EndTime" type="date" required="required">
  </div><div class="col-lg-6 col-md-12">
    <label class="form-label" for="CompanyName">Tên công ty</label>
    <input class="form-control" id="CompanyName" name="CompanyName" type="text" required="required" placeholder="Nhập tên công ty">
  </div>
  <div class="col-lg-12 col-md-12">
    <label class="form-label" for="Description">Mô tả công việc</label>
    <textarea class="form-control" id="Description" name="Description" type="text" required="required" rows="3" placeholder="Mô tả công việc"></textarea>
  </div><div class="col-12 d-flex justify-content-end">
    <button class="btn btn-light m-5" type="reset">Hủy bỏ</button>
    <button class="btn btn-primary m-5" type="button">Lưu thông tin</button>
  </div>
</form>
