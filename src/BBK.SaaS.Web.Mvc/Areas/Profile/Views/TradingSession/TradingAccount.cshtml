@using Abp.Localization
@using BBK.SaaS.Web.Areas.App.Startup

@section Scripts
{
    <script abp-src="/view-resources/App/Common/_DynamicEntityPropertyManager.js" asp-append-version="true"></script>
    <script abp-src="/view-resources/Profile/TradingSession/indexAccount.js" asp-append-version="true"></script>
}

<input type="hidden" value="@ViewBag.Id" id="TradingSessionId"></input>
<div class="page-body">
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="card">
                <div class="card-body">
                    <div class="col-xl-12">
                        <div id="panel-1" class="panel">
                            <div class="panel-hdr">
                                <h2>
                                    <span class="fw-300"><i>Danh sách người tham gia</i></span>
                                </h2>
                            </div>
                            <div class="panel-container show mt-5">
                                <div class="panel-content">
                                    <div class="card-wrapper border rounded-3 light-card checkbox-checked">
                                        <div class="row ">
                                            <div class="col-lg-4 col-md-4 mb-3  ">
                                                <input type="text" id="SearchTerm" name="SearchTerm" placeholder="@(new FixedLocalizableString("Tên"))" class="form-control" required>
                                            </div>
                                            <div class="col-lg-4 col-md-4 mb-3 ">
                                                <select class="js-example-basic-multiple" multiple="mutiple" data-placeholder="Tất cả địa điểm" id="WorkSite" name="WorkSite" asp-items="@ViewBag.listItemsTinhThanh">
                                                </select>
                                            </div>
                                            <div class="col-lg-3 col-md-12 mb-3 ">
                                                <button class="btn btn-primary ml-auto waves-effect waves-themed" id="Search" type="button">@(new FixedLocalizableString("Tìm kiếm"))</button>
                                            </div>
                                        </div>
                                    </div>


                                    <ul class="nav nav-tabs" role="tablist">
                                        <li class="nav-item">
                                            <a href="#Tab1" class="nav-link active" data-bs-toggle="tab" role="tab">
                                              Danh sách nhà tuyển dụng
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a href="#Tab2" data-bs-toggle="tab" role="tab" class="nav-link">
                                              Danh sách người lao động <span id="assigned-role-count" class="badge badge-success me-2"></span>
                                            </a>
                                        </li>
                                    </ul>
                                    <div class="tab-content">
                                        <div class="tab-pane pt-3 active" id="Tab1" role="tabpanel">
                                            @if(@ViewBag.StartTime > DateTime.Now)
                                            {
                                                  <div class="form-row">
                                                <div class="col-lg-6 col-md-12 mb-3">
                                                    <button id="btnRecruiter" name="CreateNewButton" class="btn btn-sm btn-toolbar-full btn-primary ml-auto">
                                                        <span class="fa fa-plus-square"></span>
                                                    Mời nhà tuyển dụng
                                                    </button>
                                                </div>
                                            </div>
                                            }
                                          
                                            <!-- datatable start -->
                                            <table id="TradingTable" class="table table-bordered table-hover table-striped w-100">
                                                <thead class="bg-primary-600">
                                                    <tr>
                                                        <th>STT</th>
                                                        <th>Tên nhà tuyển dụng</th>
                                                        <th>Địa chỉ</th>
                                                        <th>Ngành hoạt động chính</th>
                                                        <th>Quy mô công ty</th>
                                                        <th>Ngày thành lập</th>
                                                        <th>Số điện thoại</th>
                                                        <th>Trạng thái</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                            <!-- datatable end -->
                                        </div>
                                        <div class="tab-pane pt-3 " id="Tab2" role="tabpanel">
                                            @if (@ViewBag.StartTime > DateTime.Now)
                                            {
                                                <div class="form-row">
                                                    <div class="col-lg-6 col-md-12 mb-3">
                                                        <button id="btnCandidate" name="CreateNewButton" class="btn btn-sm btn-toolbar-full btn-primary ml-auto">
                                                            <span class="fa fa-plus-square"></span>
                                                       Mời người lao động
                                                        </button>
                                                    </div>
                                                </div>
                                            }
                                            <!-- datatable start -->
                                            <table id="TradingTablePresent" class="table table-bordered table-hover table-striped w-100">
                                                <thead class="bg-primary-600">
                                                    <tr>
                                                        <th>STT</th>
                                                        <th>Tên ứng viên</th>
                                                        <th>Vị trí mong muốn</th>
                                                        <th>Nơi làm việc</th>
                                                        <th>Nhóm ngành nghề</th>
                                                        <th>Trạng thái</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                            <!-- datatable end -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>