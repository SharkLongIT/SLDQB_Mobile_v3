    <script src="/view-resources/Profile/Users/CurriculumVitaeJobApplication.js" asp-append-version="true"></script>
}

<div class="page-body">
	<!-- Container-fluid starts-->
	<div class="container-fluid">
		<div class="row">
            <nav>
                <ol class="breadcrumb justify-content-sm-start align-items-center mb-0" style="margin-bottom: 32px !important;">
                    <li class="breadcrumb-item">
                        <a href="index.html">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home">
                                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                <polyline points="9 22 9 12 15 12 15 22"></polyline>
                            </svg>
                        </a>
                    </li>
                    <li class="breadcrumb-item f-w-400 active"><a href="/">Trang chủ</a></li>
                    <li class="breadcrumb-item f-w-400">Danh sách hồ sơ ứng tuyển</li>
                </ol>
            </nav>
			<div class="col-sm-12">
				<div class="card">					
					<div class="card-body">
                        	<div class="form">
							<div class="row align-items-center mb-4">
								<div class="col-xl-12">
									<div class="mb-3 align-items-center">
										<div class="input-group">
											<input type="text" id="UsersTableFilter" class="form-control" placeholder="@L("SearchWithThreeDot")" >
											<button id="GetJobAppButton" class="btn btn-primary" type="submit">
												<i class="flaticon-search-1" aria-label="@L("Search")"></i>
											</button>
										</div>
									</div>
								</div>
							</div>
							<div id="AdvacedAuditFiltersArea" style="display: none" class="row mb-4">
                                <div class="col-lg-10">
                                                <div class="row">
                                                    <div class="col-lg-3 col-md-4 mb-3 mt-auto">
                                                        <select class="form-control" id="WorkSite" name="WorkSite" asp-items="@ViewBag.WorkSite">
                                                            <option value="0" selected=""> Tất cả địa điểm</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-lg-3 col-md-3 mb-3 mt-auto">
                                                        <select class="form-control" id="ExperiencesId" name="ExperiencesId" asp-items="@ViewBag.Experiences">
                                                            <option value="0" selected="">Tất cả kinh nghiệm</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-lg-3 col-md-3 mb-3 mt-auto">
                                                        <select class="form-control" id="LiteracyId" name="LiteracyId" asp-items="@ViewBag.Literacy">
                                                            <option value="0" selected="">Tất cả bằng cấp</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-lg-3 col-md-3 mb-3 mt-auto">
                                                        <select class="form-control" id="OccupationId" name="OccupationId" asp-items="@ViewBag.Occupations">
                                                            <option value="0" selected="">Tất cả ngành nghề</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-lg-3 col-md-4 mb-3 mt-auto">
                                                        <select class="form-control" id="salary" name="salary" asp-items="@ViewBag.Salary">
                                                            <option value="0" selected="">Tất cả mức lương</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-lg-3 col-md-4 mb-3 mt-auto">
                                                        <select class="form-control"  name="UserId" >
                                                            <option value="0" selected="">Tất cả người lao động</option>
                                                        </select>
                                                    </div>
                                                  
                                                  
                                                   
                                                </div>
                                            </div>
								<div class="col-xl-12 text-end">
									<button id="RefreshUserListButton" class="btn btn-primary float-end">
										<i class="fa fa-sync btn-md-icon"></i>
										<span class="d-none d-md-inline-block">
											Làm mới
										</span>
									</button>
								</div>
							</div>
							<div class="row mb-4">
								<div class="col-xl-12">
									<span id="ShowAdvancedFiltersSpan" class="text-muted clickable-item">
										<i class="fa fa-angle-down"></i> @L("ShowAdvancedFilters")
									</span>
									<span id="HideAdvancedFiltersSpan" class="text-muted clickable-item" style="display: none">
										<i class="fa fa-angle-up"></i> @L("HideAdvancedFilters")
									</span>
								</div>
							</div>
                        <div id="panel-1" class="panel">
                            <div class="panel-hdr">
                            </div>
                            <div class="panel-container show mt-5">
                                <div class="panel-content">
                                </div>
                                <div class="table-responsive theme-scrollbar">
                                    <table id="UsersTable" class="table align-middle table-row-dashed dataTable dtr-inline no-footer table-responsive theme-scrollbar user-datatable">
                                        <thead>
                                            <tr>
                                                <th>STT</th>
                                                <th>Tên người lao động</th>
                                                <th>Tên hồ sơ</th>
                                                <th>Giới tính</th>
                                                <th>Kinh nghiệm</th>
                                                <th>Bằng cấp</th>
                                                <th>Ngành nghề</th>
                                                <th>Địa chỉ</th>
                                                <th>Mức lương</th>
                                                <th>Hành động</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>

                        </div>
						
					</div>
				</div>
			</div>
		</div>
	</div>
</div>