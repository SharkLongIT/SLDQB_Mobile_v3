@using BBK.SaaS.Web.Areas.Profile.Models.Recruiters
@model GetAllJobOfUser


<div class="col-sm-12">
    <div class=" card hover text-center">
        <div class="info">
                @using (Html.BeginForm("Search", "JobUser", FormMethod.Get))
                {
                <div class="row d-flex justify-content-end" style="margin-bottom: 32px; margin-top:32px">

                    <div class="col-sm-3 col-lg-3 order-sm-1 order-xl-0">
                        <div class="faq-form">
                            <i class="search-icon" data-feather="search"></i>
                            <input class="form-control" name="Filtered" type="text" placeholder="@L("Nhập vị trí tuyển dụng")">
                        </div>
                    </div>
                    <!--thêm thẻ select droplist-->
                    <div class="col-sm-3 col-lg-3 order-sm-0 order-xl-1">
                        <select class="js-example-basic-multiple" multiple="multiple" id="WorkSite" name="WorkSite" asp-items="@ViewBag.listItemsTinhThanh">
                        </select>
                    </div>
                    <div class="col-sm-3 col-lg-3 order-sm-2 order-xl-2">
                        <select required class="form-control" id="Job" name="job" asp-items="@ViewBag.listItemsKyThuat">
                            <option value="0" selected>Tất cả ngành nghề</option>
                        </select>
                    </div>
                    <div class="col-sm-2 col-lg-2 order-sm-2 order-xl-2">
                        <button type="submit" class="btn btn-primary btn-lg" style="float: left;">Tìm Kiếm</button>
                    </div>
                </div>
                }
               
        </div>
    </div>
</div>

<div class="row" style="display: flex; flex-wrap: nowrap;">
    <div class="col-sm-8">
        <h3 style="color:#7a70ba;">
            <i class="icofont icofont-bag-alt"
               Style="margin-right: 16px;"></i><b>Việc làm mới nhất</b>
        </h3>
    </div>
    <div class="row">
        <div class="col-sm-4" style="text-align:end;">
            <label>
                <a href="../JobUser">
                    <i style="color: #7a70ba;"><b><u>Xem thêm</u></b></i>
                </a>
            </label><i class="fa fa-angle-double-right"
                       style="color: #7a70ba; margin-left: 8px;"></i>
        </div>
    </div>
</div>

<hr>
<div class="row">
    @for (int i = 0; i < Model.Recruiment.Count; i++)
    {
        <div class="col-sm-4">
            <div class="card rounded-3">
                <div class="profile-img-style">
                    <div class="row">
                        <div class="col-sm-8">
                        </div>
                    </div>
                    <div class="row my-2">
                        <div class="col-lg-12 col-xl-3">
                            <div class="my-gallery" id="aniimated-thumbnials-3" itemscope="">
                                <!-- thay ảnh vào -->
                                @if (Model.Recruiment[i].Recruiter.AvatarUrl != null)
                                {
                                    <p>
                                        <a href="../JobUser/ViewRecruitment/@Model.Recruiment[i].Id">
                                            <img class="img-130 rounded-circle mt-2 ms-2" width="80" height="80" src="@Model.Recruiment[i].Recruiter.AvatarUrl" alt="#">
                                        </a>
                                    </p>

                                }
                                else
                                {
                                    <p>
                                        <a href="../JobUser/ViewRecruitment/@Model.Recruiment[i].Id">
                                            <img src="@Url.Content($"{ApplicationPath}Common/Images/default-profile-picture.png")" width="80" height="80" class="img-130 rounded-circle mt-2 ms-2" />
                                        </a>
                                    </p>
                                }
                            </div>
                        </div>
                        <div class="col-xl-9">
                            <div class="d-flex justify-content-between">
                                <a href="../JobUser/ViewRecruitment/@Model.Recruiment[i].Id"><h5><b style="color: black;">@Model.Recruiment[i].Title</b></h5></a>
                            </div>
                            <p style="margin-bottom: 8px !important;"> @Model.Recruiment[i].Recruiter.CompanyName</p>
                            <div>
                                <div class="d-flex justify-content-initial">
                                    <label class="m-0" style="margin-right: 1rem !important;">
                                        <a>
                                            <i class="fa fa-money"></i>
                                        </a>@(Math.Floor(@Model.Recruiment[i].MinSalary) / 1000000)-@(Math.Floor(@Model.Recruiment[i].MaxSalary) / 1000000) Triệu
                                    </label>
                                    <label class="m-0" style="margin-bottom:8px !important;">
                                        <a>
                                            <i class="icofont icofont-ui-alarm"></i>
                                            @Model.Recruiment[i].Experiences.DisplayName
                                        </a>
                                    </label>
                                </div>
                            </div>
                            <div>
                                <label class="m-0" style="margin-right: 1rem !important;">
                                    <a>
                                        <i class="fa fa-calendar"></i>
                                    </a>@Model.Recruiment[i].DeadlineSubmission.ToShortDateString()
                                </label>
                                <label class="m-0">
                                    <a ><i class="fa fa-location-arrow"></i></a> @Model.Recruiment[i].WorkAddress
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>



