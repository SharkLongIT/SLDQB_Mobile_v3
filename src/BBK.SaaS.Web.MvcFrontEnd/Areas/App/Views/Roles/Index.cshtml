@using Abp.Application.Services.Dto
@using BBK.SaaS.Authorization
@using BBK.SaaS.Web.Areas.App.Models.Roles
@using BBK.SaaS.Web.Areas.App.Startup
@model RoleListViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Administrators.Roles;
    ViewBag.PageTitle = @L("Roles");
	ViewBag.PageDescription = @L("RolesHeaderInfo");
}

@section Scripts
{
    <script abp-src="/view-resources/App/_Bundles/role-list.js" asp-append-version="true"></script>
}

<div class="page-body">
	<!-- Container-fluid starts-->
	<div class="container-fluid">
		<div class="row">
			<div class="col-sm-12">
				<div class="card">
					<div class="card-header">
						<h4>@L("Roles")</h4>
						<div class="card-header-right">
							<ul class="list-unstyled card-option">
								<li><i class="icon-more-alt"></i></li>
								<li><i class="view-html fa fa-code"></i></li>
								<li><i class="icofont icofont-maximize full-card"></i></li>
								<li><i class="icofont icofont-minus minimize-card"></i></li>
								<li><i class="icofont icofont-refresh reload-card"></i></li>
								<li><i class="icofont icofont-error close-card"></i></li>
							</ul>
						</div>
						<span>@L("UsersHeaderInfo")</span>
					</div>
					<div class="card-body common-flex">
						<!-- Put actions here -->
            @if (IsGranted(AppPermissions.Pages_Administration_Roles_Create))
            {
                <button id="CreateNewRoleButton" class="btn btn-primary">
                    <i class="la la-plus btn-md-icon"></i>
                    <span class="d-none d-md-inline-block">
                        @L("CreateNewRole")
                    </span>
                </button>
            }
					</div>
					<div class="card-body">
						<div class="table-responsive theme-scrollbar">
							<!-- Put table here -->
                <table id="RolesTable" class="table align-middle table-row-dashed dataTable dtr-inline no-footer table-responsive theme-scrollbar user-datatable">								
							      <thead>
                        <tr>
                            <th></th>
                            <th>@L("Actions")</th>
                            <th>@L("RoleName")</th>
                            <th>@L("CreationTime")</th>
                        </tr>
                    </thead>
                </table>              
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
