@using Abp.Localization
@using BBK.SaaS.Web.Areas.App.Startup

@section Scripts
{
    <script abp-src="/view-resources/App/Common/_DynamicEntityPropertyManager.js" asp-append-version="true"></script>
    <script abp-src="/view-resources/Profile/Candidate/MakeAnAppointmentView.js" asp-append-version="true"></script>
}
@{
    ViewBag.CurrentPageName = AppPageNames.Administrators.Users;
    ViewBag.PageTitle = "Danh sách lịch hẹn";
    // ViewBag.PageDescription = "Hồ sơ ứng tuyển";
}
<section id="content">
	<div class="content-wrap pt-3"> 
    <!-- Container-fluid starts-->
    <div class="container">
        <div class="row">
            <nav>
                <ol class="breadcrumb justify-content-sm-start align-items-center mb-0" style="margin-bottom: 32px !important;">
                    <li class="breadcrumb-item">
                        <a href="/">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home">
                            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                            <polyline points="9 22 9 12 15 12 15 22"></polyline>
                        </svg>
                        </a>
                    </li>
                    <li class="breadcrumb-item f-w-400">
                        <a href="/">Trang chủ</a>
                    </li>
                    <li class="breadcrumb-item f-w-400">Danh sách lịch hẹn</li>
                </ol>
            </nav>
            <div class="card">
                <div class="card-body">
                    <div class="col-xl-12">
                        <div id="panel-1" class="panel">
                            <div class="panel-hdr">
                                <h2>
                                    <span class="fw-300"><i>Danh sách lịch hẹn</i></span>
                                </h2>
                            </div>
                            <div class="panel-container show mt-5">
                                <div class="panel-content">
                                    <div class="card-wrapper border rounded-3 light-card checkbox-checked">
                                        <div class="row ">
                                            <div class="col-lg-10">
                                                <div class="row mx-2 my-3">
                                                    <div class="col-lg-3 col-md-4 mb-3">
                                                        <input type="text" id="SearchTerm" name="SearchTerm" placeholder="@(new FixedLocalizableString("Tên công ty/Vị trí muốn ứng tuyển"))" class="form-control">
                                                    </div>
                                                    <div class="col-lg-3 col-md-4 mb-3 mt-auto">
                                                        <select required class="form-select" id="Ranks" name="Ranks" asp-items="@ViewBag.listItemsCapBac">
                                                            <option value="0" selected>Vị trí</option>
                                                        </select>
                                                    </div>
                                                    <div class="col-lg-3 col-md-4 mb-3 mt-auto">
                                                        <input class="form-control" type="date" placeholder="Ngày hẹn" id="InterviewTime">
                                                    </div>
                                                    <div class="col-lg-3 col-md-4 mb-3 mt-auto">
                                                        <select required class="form-select" id="StatusOfCandidate" name="StatusOfCandidate">
                                                            <option value="" selected>Trạng thái</option>
                                                            <option value="1">Chờ phỏng vấn</option>
                                                            <option value="2">Xác nhận phỏng vấn</option>
                                                            <option value="3">Từ chối phỏng vấn</option>
                                                            <option value="4">Đã phỏng vấn</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-2 my-3">
                                                <button class="btn btn-danger ml-auto waves-effect waves-themed mb-3" id="Search" type="button">@(new FixedLocalizableString("Tìm kiếm"))</button>
                                            </div>
                                        </div>
                                    </div>


                                    <!-- datatable start -->
                                    <div class="mt-5">
                                        <table id="ApplicationRequestTable" class="table table-bordered table-hover table-striped w-100 mt-5">
                                            <thead class="bg-primary-600">
                                                <tr>
                                                    <th>STT</th>
                                                    <th>Tên công ty</th>
                                                    <th>Tên công việc</th>
                                                    <th>Tên hồ sơ ứng tuyển</th>
                                                    <th>Vị trí ứng tuyển</th>
                                                    <th>Ngày hẹn</th>
                                                    <th>Trạng thái</th>
                                                    <th>Trạng thái phỏng vấn</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>

                                    <!-- datatable end -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</section>