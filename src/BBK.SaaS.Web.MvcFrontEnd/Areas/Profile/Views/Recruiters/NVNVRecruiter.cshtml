@using Abp.Localization
@using BBK.SaaS.Web.Areas.App.Startup

@section Scripts
{
    <script abp-src="/view-resources/Profile/Recruiters/NVNVRecruiter.js" asp-append-version="true"></script>
}



@{
    ViewBag.CurrentPageName = AppPageNames.Administrators.Users;
    ViewBag.PageTitle = "Danh sách nhà tuyển dụng";
    ViewBag.PageDescription = "Danh sách nhà tuyển dụng";
}
<div class="page-body">
    <!-- Container-fluid starts-->
    <div class="container-fluid">
        <div class="row">
            <div class="card">
                <div class="card-body">
                    <div class="col-xl-12">
                        <div id="panel-1" class="panel">
                            <div class="panel-hdr">
                                <h2>
                                    <span class="fw-300"><i>Danh sách nhà tuyển dụng</i></span>
                                </h2>
                            </div>
                            <div class="panel-container show mt-5">
                                <div class="panel-content">
                                    <div class="card-wrapper border rounded-3 light-card checkbox-checked">
                                        <div class="row ">
                                            <div class="col-lg-10">
                                                <div class="row">
                                                    <div class="col-lg-4 col-md-4 mb-3">
                                                        <input type="text" id="SearchTerm" name="SearchTerm" placeholder="@(new FixedLocalizableString("Tên nhà tuyển dụng"))" class="form-control">
                                                    </div>
                                                    <div class="col-lg-4 col-md-4 mb-3 mt-auto">
                                                        <select required class="form-control" id="Address" name="Address" asp-items="@ViewBag.listItemsTinhThanh">
                                                            <option value="0" selected>Tất cả địa điểm</option>
                                                        </select>
                                                    </div> 
                                                    <div class="col-lg-4 col-md-4 mb-3 mt-auto">
                                                        <select required class="form-control" id="SphereOfActivity" name="SphereOfActivity" asp-items="@ViewBag.listItemsKyThuat">
                                                            <option value="0" selected>Tất cả ngành nghề</option>
                                                        </select>
                                                    </div>
                                                   
                                                </div>
                                            </div>
                                            <div class="col-lg-2 d-flex align-items-end justify-content-end">
                                                <button class="btn btn-primary ml-auto waves-effect waves-themed mb-3" id="Search" type="button">@(new FixedLocalizableString("Tìm kiếm"))</button>
                                            </div>
                                        </div>
                                    </div>


                                    <!-- datatable start -->
                                    <div class="mt-5">
                                        <table id="NVNVTable" class="table table-bordered table-hover table-striped w-100 mt-5">
                                            <thead class="bg-primary-600">
                                                <tr>
                                                    <th>STT</th>
                                                    <th>Tên nhà tuyển dụng</th>
                                                    <th>Mã số thuế</th>
                                                    <th>Quy mô</th>
                                                    <th>Ngày thành lập</th>
                                                    <th>Ngành hoạt động chính</th>
                                                    <th>Địa chỉ</th>
                                                    <th>Số điện thoại</th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                               
                                    <!-- datatable end -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>