@using BBK.SaaS.Web.Areas.Profile.Models.Recruiters
@model GetAllJobOfUser

<div class="widget-grid mt-3">
    <div class="card">
        <div class="card-header" style="text-transform: none">
            <h4><i class="icofont icofont-users-alt-2 m-r-10"></i>&nbsp;Hồ sơ xin việc mới nhất</h4>
            <div class="card-header-right">
                <a href="../UserJob" class="btn btn-pill btn-outline-primary btn-air-primary btn-xs" type="button"
                        title="btn btn-pill btn-outline-primary btn-air-primary btn-xs">
                    Xem thêm
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                @for (int i = 0; i < Model.Candidate.Count; i++)
                {
                    <div class="col-xl-4 col-sm-6 col-xxl-4 col-ed-4 box-col-4 widget-hover">
                        <div class="card social-profile">
                            <div class="card-body">
                                <div class="social-img-wrap">
                                    <div class="social-img">
                                        @if (Model.Candidate[i].User.Id > 0)
                                        {
                                            <a href="../UserJob/Detail/@Model.Candidate[i].JobApplication.Id">
                                                <img src="@Url.Action("GetProfilePictureByUser", "Profile", new {area = string.Empty})?userId=@(Model.Candidate[i].User.Id)&&profilePictureId=@(Model.Candidate[i].ProfilePictureId)" width="68" height="68" />
                                            </a>

                                        }
                                        else
                                        {
                                            <a href="../UserJob/Detail/@Model.Candidate[i].JobApplication.Id">
                                                <img src="@Url.Content($"{ApplicationPath}Common/Images/default-profile-picture.png")" width="68" height="68" />
                                            </a>
                                        }
                                    </div>
                                </div>
                                <div class="social-details m-t-5">
                                    <h5 class="mb-1"><a href="../UserJob/Detail/@Model.Candidate[i].JobApplication.Id">@Model.Candidate[i].Candidate.Account.Name</a></h5>
                                    <span class="f-light"> @Model.Candidate[i].JobApplication.Positions.DisplayName</span><br>
                                    <span class="f-light">
                                        <i class="fa fa-briefcase font-awesome"></i>&nbsp;@Model.Candidate[i].JobApplication.Experiences.DisplayName
                                    </span>
                                    <ul class="social-follow m-t-5">
                                        <li>
                                            <h5 class="mb-0"><i class="fa fa-money font-awesome"></i></h5><span class="f-light">@(Math.Floor(@Model.Candidate[i].JobApplication.DesiredSalary.Value) / 1000000) Triệu</span>
                                        </li>
                                        <li>
                                            <h5 class="mb-0"><i class="fa fa-mortar-board font-awesome"></i></h5><span class="f-light"> @Model.Candidate[i].JobApplication.Literacy.DisplayName</span>
                                        </li>
                                        <li>
                                            <h5 class="mb-0"><i class="fas fa-sync me-1 font-awesome"></i></h5><span class="f-light"> @Model.Candidate[i].Age</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

