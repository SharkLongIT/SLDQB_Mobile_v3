@using BBK.SaaS.Web.Areas.App.Startup
@using BBK.SaaS.Web.Areas.Profile.Models.Recruiters
@model RecruiterDetailViewModel
@section Styles
{
    <link rel="stylesheet" abp-href="/view-resources/Profile/Recruitments/Style.css" asp-append-version="true" />

}
@section Scripts
{
    <script abp-src="/view-resources/Profile/Recruiters/PagingDetail.js" asp-append-version="true"></script>
}

<section id="content">
	<div class="content-wrap pt-3">       <!-- Container-fluid starts-->
    <!-- Container-fluid starts-->
    <div class="container">
        <div class="user-profile">
            <nav>
                <ol class="breadcrumb justify-content-sm-start align-items-center mb-0" style="margin-bottom: 32px !important;">
                    <li class="breadcrumb-item">
                        <a href="/">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home">
                                <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                <polyline points="9 22 9 12 15 12 15 22"></polyline>
                            </svg>
                        </a>
                    </li>
                    <li class="breadcrumb-item f-w-400">@Html.ActionLink("Việc tìm người", "Search", "JobUser", null, null)</li>
                    <li class="breadcrumb-item f-w-400">Chi tiết tin</li>
                    <li class="breadcrumb-item f-w-400 active">Trang công ty</li>
                </ol>
            </nav>
            <div class="row">
                <div class="col-sm-12">
                    <input type="hidden" value="@Model.Recruiter.UserId" id="recruiterUserId" />
                    <div class="card hovercard text-center">
                        @if (Model.Recruiter.ImageCoverUrl != null)
                        {
                            <div class="cardheader" style="background-image : url(@Model.Recruiter.ImageCoverUrl);  background-size: cover; background-position: 10%;height: 470px;"></div>
                        }
                        else
                        {
                            <div class="cardheader" style="background-image : url(../../themes/bg-profile.png);  background-size: cover; background-position: 10%;height: 470px;"></div>
                        }
                        <div class="user-image">
                            <div class="avatar">
                                @if (Model.Recruiter.AvatarUrl != null)
                                {
                                    <img src="@Model.Recruiter.AvatarUrl" alt="" />
                                }
                                else
                                {
                                    <img src="@Url.Content($"{ApplicationPath}Common/Images/default-profile-picture.png")" alt="" />
                                }
                            </div>
                        </div>
                        <div class="info">
                            <div class="row">
                                <div class="col-sm-6 col-lg-4 order-sm-1 order-xl-0">
                                    <div class="row mx-2">
                                        <div class="col-md-6">
                                            <div class="ttl-info text-start">
                                                <h6><i class="fa fa-envelope"></i>   Email</h6><span>@Model.Recruiter.ContactEmail</span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="ttl-info text-start">
                                                @if (@Model.Recruiter.DateOfEstablishment.HasValue)
                                                {
                                                    <h6><i class="fa fa-calendar"></i>   Ngày thành lập</h6>

                                                    <span>@Model.Recruiter.DateOfEstablishment.Value.ToShortDateString()</span>
                                                }
                                                else
                                                {
                                                    <h6><i class="fa fa-calendar"></i>   Ngày thành lập</h6> <span></span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 col-lg-4 order-sm-0 order-xl-1">
                                    <div class="user-designation">
                                        <div class="title"><a target="_blank" href="">@Model.Recruiter.CompanyName</a></div>
                                    </div>
                                </div>
                                <div class="col-sm-6 col-lg-4 order-sm-2 order-xl-2">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="ttl-info text-start">
                                                <h6><i class="fa fa-phone"></i>   Số điện thoại</h6><span>@Model.Recruiter.ContactPhone</span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="ttl-info text-start">
                                                <h6><i class="fa fa-location-arrow"></i>   Địa chỉ</h6>
                                                @if (@Model.Recruiter.Address != null && @Model.Recruiter.District.DisplayName != null && @Model.Recruiter.Province.DisplayName != null && @Model.Recruiter.Village.DisplayName != null)
                                                {
                                                    <span>@Model.Recruiter.Address, @Model.Recruiter.Village.DisplayName, @Model.Recruiter.District.DisplayName, @Model.Recruiter.Province.DisplayName.</span>
                                                }
                                                else
                                                {
                                                    <span></span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="widget-grid mt-5">
                        <div class="card">
                            <div class="card-header"style="text-transform: none">
                                <h4><i class="fa fa-user m-r-10"></i>Giới thiệu công ty</h4>
                            </div>
                            <div class="card-body student">
                                <div class="job-description">
                                    <p>
                                        @Model.Recruiter.Description
                                    </p>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="widget-grid mt-5">
                        <div class="card">
                            <div class="card-header"style="text-transform: none">
                                <h4><i class="icofont icofont-job-search m-r-10"></i>Tuyển dụng</h4>
                            </div>
                            <div class="card-body student">
                                <div class="row g-sm-4 g-3 mt-3 job-apps">
                                </div>
                            </div>
                            <div class="job-pagination">
                                <ul class="pagination pagination-primary justify-content-center">
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</section>