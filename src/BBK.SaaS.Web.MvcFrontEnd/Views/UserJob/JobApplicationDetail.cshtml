<link rel="stylesheet" href="~/view-resources/Views//UserJob/UserJobDetail.min.css">

@section Scripts
{
    <script src="/view-resources/Views/UserJob/UserJobDetail.js" asp-append-version="true"></script>
}
<link rel="stylesheet" abp-href="/view-resources/Profile/Recruitments/Style.css" asp-append-version="true" />
@using BBK.SaaS.Web.Areas.Profile.Models.JobApplication
@model JobApplicationModel
<section id="content">
	<div class="content-wrap">
        <!-- Container starts-->
        <div class="container">
            <div class="user-profile">
                <div class="row">
                    <nav>
                        <ol class="breadcrumb justify-content-sm-start align-items-center mb-0" style="margin-bottom: 32px !important;">
                            <li class="breadcrumb-item">
                                <a href="/">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home">
                                        <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
                                        <polyline points="9 22 9 12 15 12 15 22"></polyline>
                                    </svg>
                                </a>
                            </li>
                            <li class="breadcrumb-item f-w-400 active">
                                <a href="/">Trang chủ</a>
                            </li>

                            <li class="breadcrumb-item f-w-400 active" style="text-transform: none">@Html.ActionLink("Người tìm việc", "Index", "UserJob", new { Area = "" }, null)</li>
                            <li class="breadcrumb-item f-w-400 ">
                                <a>Thông tin người tìm việc</a>
                            </li>
                        </ol>
                    </nav>
                    <!-- user profile first-style start-->
                    <div class="col-sm-12">
                        <div class="card" style="padding:30px">
                            <div class="blog-box blog-list row">
                                <div class=" col-xl-2">
                                    <div class="my-gallery" id="aniimated-thumbnials-3" style="display: flex; justify-content: center;" data-pswp-uid="1">
                                        <!-- thay ảnh vào -->
                                        @if (Model.User.Id > 0)
                                        {
                                            <img src="@Url.Action("GetProfilePictureByUser", "Profile", new {area = string.Empty})?userId=@(Model.User.Id)&&profilePictureId=@(Model.ProfilePictureId)" class="img-thumbnail img-custom-thumbnail img rounded-circle user-edit-dialog-profile-image m-r-10" />
                                        }
                                        else
                                        {
                                            <img src="@Url.Content($"{ApplicationPath}Common/Images/default-profile-picture.png")"
                                                 class="img-thumbnail img rounded-circle user-edit-dialog-profile-image m-r-10" />
                                        }
                                        @* <img class="img rounded-circle" src="../assets/images/avtar/3.jpg" alt="#" style="width: 200px;"> *@
                                    </div>
                                </div>
                                <div class="col-xl-9">
                                    <div class="blog-details">
                                        <h2>@Model.User.Name</h2>
                                        <div class="row">
                                            <input hidden id="JobAppId" value="@Model.JobApplication.Id">
                                            <div class="col-sm-6">
                                                <h5 style="color: black;margin-top: 16px;">
                                                    @Model.JobApplication.Positions.DisplayName
                                                </h5>
                                            </div>
                                            <div class="col-sm-6" style="display: flex; justify-content: flex-end;">
                                                @if (@ViewBag.IsRecruiters == true)
                                                {
                                                    <div class="btn-group me-2">
                                                        <button class="btn btn-danger  makeanappointment" type="button" aria-expanded="false">Đặt lịch</button>
                                                    </div>
                                                }
                                                <div class="btn-group">
                                                    @if (@Model.JobApplication.FileCVUrl != null)
                                                    {
                                                        <button class="btn btn-danger dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">CV đính kèm: CV_NVA</button>
                                                        <ul class="dropdown-menu dropdown-block text-left" style="width: 218px;">
                                                            <li><a class="dropdown-item" href="@Model.JobApplication.FileMgr.FileUrl">Tải xuống</a></li>
                                                        </ul>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row" style="display: flex; justify-content: space-between">
                                            <hr>
                                            <div class="col-md-2">
                                                <div class="ttl-info text-start">
                                                    <h6>
                                                        <i class="fa fa-phone" style="color: #7a70ba;"></i>&nbsp;&nbsp;&nbsp;Số
                                                        điện thoại
                                                    </h6><span>@Model.User.PhoneNumber</span>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div class="ttl-info text-start">
                                                    <h6>
                                                        <i class="fa fa-envelope" style="color: #7a70ba;"></i>&nbsp;&nbsp;&nbsp;Email
                                                    </h6><span style="display:contents">@Model.User.EmailAddress</span>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div class="ttl-info text-start">
                                                    <h6>
                                                        <i class="icofont icofont-location-arrow" style="color: #7a70ba;"></i>&nbsp;&nbsp;&nbsp;Địa
                                                        chỉ
                                                    </h6>
                                                    @if (@Model.Candidate.Address != null && @Model.Candidate.District.DisplayName != null && @Model.Candidate.Province.DisplayName != null)
                                                    {
                                                        <span>@Model.Candidate.Address, @Model.Candidate.District.DisplayName, @Model.Candidate.Province.DisplayName</span>
                                                    }
                                                    else
                                                    {
                                                        <span></span>
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div class="ttl-info text-start">
                                                    <h6>
                                                        <i class="fa fa-calendar" style="color: #7a70ba;"></i>&nbsp;&nbsp;&nbsp;Ngày
                                                        sinh
                                                    </h6><span>@Model.Candidate.DateOfBirth?.ToShortDateString()</span>
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div class="ttl-info text-start">
                                                    <h6>
                                                        <i class="fa fa-user" style="color: #7a70ba;"></i>&nbsp;&nbsp;&nbsp;Giới
                                                        tính

                                                    </h6>
                                                    @if (Model.Candidate.Gender == BBK.SaaS.Mdls.Profile.Candidates.Dto.GenderEnum.Male)
                                                    {
                                                        <span>Nam</span>
                                                    }
                                                    else
                                                    {
                                                        <span>Nữ</span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12 mt-3">
                        <div class="card">
                            <div class="card-header" style="text-transform: none">
                                <h4 style="color:black;"><i class="fa fa-user" style="Color:#7a70ba; margin-right: 8px;"></i>Thông tin hồ sơ</h4>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <h5 class="mt-2 mb-2"> - Mức lương mong muốn:</h5>
                                        <p class="mb-3 ms-3" style="color: #7a70ba;">
                                            @if (Model.JobApplication.DesiredSalary.HasValue)
                                            {
                                                @Model.JobApplication.DesiredSalary.Value
                                            }
                                            else
                                            {
                                                <span>
                                                    Lương thỏa thuận
                                                </span>
                                            }
                                        </p>
                                    </div>
                                    <div class="col-lg-4">
                                        <h5 class="mt-2 mb-2"> - Kinh nghiệm:</h5>
                                        <p class="mb-3 ms-3" style="color: #7a70ba;">
                                            @Model.JobApplication.Experiences.DisplayName
                                        </p>
                                    </div>
                                    <div class="col-lg-4">
                                        <h5 class="mt-2 mb-2"> - Ngành nghề:</h5>
                                        <p class="mb-3 ms-3" style="color: #7a70ba;">
                                            @Model.JobApplication.Occupations.DisplayName
                                        </p>
                                    </div>
                                    <div class="col-lg-4">
                                        <h5 class="mt-2 mb-2"> - Cấp bậc:</h5>
                                        <p class="mb-3 ms-2" style="color: #7a70ba;">
                                            @Model.JobApplication.Positions.DisplayName
                                        </p>
                                    </div>
                                    <div class="col-lg-4">
                                        <h5 class="mt-2 mb-2"> - Bằng cấp:</h5>
                                        <p class="mb-3 ms-3" style="color: #7a70ba;">
                                            @Model.JobApplication.Literacy.DisplayName
                                        </p>
                                    </div>
                                    <div class="col-lg-4">
                                        <h5 class="mt-2 mb-2"> - Ngày cập nhật:</h5>
                                        <p class="mb-3 ms-3" style="color: #7a70ba;">
                                            @if (Model.JobApplication.LastModificationTime.HasValue)
                                            {
                                                @Model.JobApplication.LastModificationTime.Value.ToShortDateString()
                                            }
                                            else
                                            {
                                                @Model.JobApplication.CreationTime.ToShortDateString()

                                            }
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12 mt-3">
                        <div class="card">
                            <div class="card-header" style="text-transform: none">
                                <h4 style="color:black;"><i class="fa fa-suitcase" style="Color:#7a70ba; margin-right: 8px;"></i>Thông tin chung</h4>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <h5 class="mt-2 mb-2">- Hình thức làm việc:</h5>
                                        <p class="mb-3 ms-3" style="color: #7a70ba;">
                                            @Model.JobApplication.FormOfWork.DisplayName
                                        </p>
                                    </div>
                                    <div class="col-lg-4">
                                        <h5 class="mt-2 mb-2">- Địa điểm mong muốn làm việc:</h5>
                                        <p class="mb-3 ms-3" style="color: #7a70ba;">
                                            @Model.JobApplication.Province.DisplayName
                                        </p>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                    @if (Model.JobApplication.WorkExperiences != null && Model.JobApplication.WorkExperiences.Count > 0)
                    {


                        <div class="col-sm-12 mt-3">
                            <div class="card">
                                <div class="card-header" style="text-transform: none">
                                    <h4 style="color:black;"><i class="icofont icofont-building-alt me-2" style="Color:#7a70ba;"></i>Kinh nghiệm làm việc</h4>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            @{
                                                int index = 0;
                                            }
                                            @foreach (var item in Model.JobApplication.WorkExperiences)
                                            {

                                                @if (index > 0)
                                                {
                                                    <hr></hr>
                                                }
                                                index++;
                                                <h6 class="mb-2 text-dark"></h6>

                                                <h5>@item.Positions</h5>
                                                <h6 class="mb-2 text-dark"></h6>

                                                <h6>@item.CompanyName</h6>
                                                <div class="block mt-2 mb-3 text-12 text-se-neutral-64 font-medium"><span>@item.StartTime.ToShortDateString()</span><span class="mx-1">-</span><span>@item.EndTime.ToShortDateString()</span></div>
                                                <div class="m-0 description ">
                                                    @item.Description
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                    @if (Model.JobApplication.LearningProcess != null && Model.JobApplication.LearningProcess.Count > 0)
                    {

                        <div class="col-sm-12 mt-3">
                            <div class="card">
                                <div class="card-header" style="text-transform: none">
                                    <h4 style="color:black;"><i class="icofont icofont-briefcase-alt-1 me-2" style="Color:#7a70ba;"></i>Trình độ học vấn</h4>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            @{
                                                int index = 0;
                                            }
                                            @foreach (var item in Model.JobApplication.LearningProcess)
                                            {

                                                @if (index > 0)
                                                {
                                                    <hr>
                                                }
                                                index++;
                                                <h6 class="mb-2 text-dark"></h6>

                                                <h5>@item.AcademicDiscipline</h5>
                                                <h6 class="mb-2 text-dark"></h6>

                                                <h6>@item.SchoolName</h6>
                                                <div class="block mt-2 mb-3 text-12 text-se-neutral-64 font-medium"><span>@item.StartTime.ToShortDateString()</span><span class="mx-1">-</span><span>@item.EndTime.ToShortDateString()</span></div>
                                                <div class="m-0 description">
                                                    @item.Description
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>