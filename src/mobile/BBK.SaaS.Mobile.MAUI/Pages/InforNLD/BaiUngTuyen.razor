<div class="row align-items-center mt-2 m-0">
    <div class="col-xl-12">
        <div class="align-items-center">
        </div>
        <div class="justify-content-center">

            @if (isError)
            {
                <div class="text-error">
                    <i class='fas fa-search search-icon'></i>
                    <h3>Không tìm thấy kết quả!!!</h3>
                    <span class="mt-2">Thử tìm kiếm với từ khoá khác.</span>
                </div>

            }
            else
            {

                <Virtualize @ref="JobApplicationContainer" Context="job" ItemsProvider="@LoadJobApplication" ItemSize="100">
                    <div class="card form-infor p-3 mt-2">
                        <div class="align-items-center">
                            <div class="d-flex">
                                <div class="p-2 mr-auto">
                                    <div class="user-infor">
                                        <span class="user">@job.Title  </span>
                                    </div>
                                    <div class="job">
                                        <span> @job.Occupations.DisplayName </span>
                                    </div>
                                    <div class="exp">
                                        <span>
                                            <i class='fas fa-money-bill-wave'></i>
                                            @if (job.DesiredSalary.HasValue)
                                            {
                                                <span>
                                                    @{
                                                        var minSalaryInMillion = Math.Truncate(job.DesiredSalary.Value / 1000000);
                                                    }
                                                    @minSalaryInMillion triệu
                                                </span>
                                            }
                                            else
                                            {
                                                <span>Lương thoả thuận</span>
                                            }
                                        </span>
                                        <span>
                                            <i class="fas fa-briefcase ml-1"></i>
                                            @job.Experiences.DisplayName
                                        </span>
                                        <span class="address">
                                            <i class='fas fa-building ml-1'></i>
                                            @job.Province.DisplayName
                                        </span>
                                    </div>
                                    <div class="time-update d-flex">
                                        <i class="fas fa-sync"></i>
                                        @if (@job.LastModificationTime == null)
                                        {
                                            <div>Thời gian cập nhật: @job.CreationTime.ToString("dd/MM/yyyy")</div>
                                        }
                                        else
                                        {
                                            <div>Thời gian cập nhật: @job.LastModificationTime.Value.ToString("dd/MM/yyyy")</div>
                                        }
                                    </div>
                                </div>
                                <div class="p-2 ml-auto">
                                    <div class="d-flex justify-content-end">
                                        <span>
                                            <i class="material-icons" @onclick="(() => DisPlayAction(job))">more_vert</i>
                                        </span>
                                    </div>
                                  
                                </div>
                            </div>
                        </div>
                    </div>
                </Virtualize>
            }
        </div>
    </div>
</div>
<div class="fab-container">
    <button class="fab-button" @onclick="OpenCreateModal">+</button>
</div>
