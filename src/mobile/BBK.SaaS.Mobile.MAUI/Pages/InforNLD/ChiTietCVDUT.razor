                                </div>
                                <div class="point">@Model.JobApplication.Excel/10</div>
                            </div>
                            <div class="d-flex">
                                <p>Word:</p>
                                <div class="skill-bar" style="margin-left: 35px; ">
                                    <div class="progress" style="width: @(Model.JobApplication.Word * 10)%;"></div>
