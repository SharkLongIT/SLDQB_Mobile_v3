@inherits ModalBase

<div id="@ModalId" class="menu menu-box-modal rounded-m" data-menu-width="330">
    <div class="content">

        @if (_isInitialized)
        {
            <div class="d-flex">
                @if (IsEdit == true)
                {
                    <h1>@L("Cập nhật hồ sơ ứng tuyển")</h1>

                }
                else
                {
                    <h1>@L("Tạo mới hồ sơ ứng tuyển")</h1>
                }
                <div class="ms-auto">
                    <a class="close-menu" @onclick="Hide"><i class="fa fa-times"></i></a>
                </div>
            </div>
            <h5> @L("Tên hồ sơ")</h5>
            <div class="input-style has-borders no-icon validate-field mb-4 input-style-active">
                <input type="text" class="form-control validate-text" id="form1" @bind="Model.Title">
                <em>(bắt buộc)</em>
            </div>
            <div class="input-style has-borders no-icon">
                <h5>@L("Cấp bậc mong muốn")</h5>
                <select class="form-control" @bind="Model.PositionsId">
                    @*   <option value="-1">Chọn cấp bậc mong muốn</option> *@
                    @foreach (var item in Rank)
                    {
                        <option value="@item.Id">
                            @item.DisplayName
                        </option>

                    }
                </select>
            </div>
            <div class="input-style has-borders no-icon">
                <h5>  @L("Nghề nghiệp")</h5>
                <select class="form-control" @bind="Model.OccupationId">
                    @foreach (var item in Career)
                    {

                        <option value="@item.Id">
                            @item.DisplayName
                        </option>

                    }
                </select>
            </div>
            <div class="input-style has-borders no-icon">
                <h5>    @L("Bằng cấp")</h5>
                <select class="form-control" @bind="Model.LiteracyId">
                    @foreach (var item in Degree)
                    {
                        <option value="@item.Id">
                            @item.DisplayName
                        </option>

                    }
                </select>
            </div>
            <div class="input-style has-borders no-icon">
                <h5>    @L("Số năm kinh nghiệm")</h5>
                <select class="form-control" @bind="@Model.ExperiencesId">
                    @foreach (var item in Experience)
                    {

                        <option value="@item.Id">
                            @item.DisplayName
                        </option>


                    }
                </select>
            </div>
            <h5> @L("Mức lương mong muốn")</h5>
            <div class="input-style has-borders has-icon validate-field mb-4">
                <input type="number" class="form-control validate-name" id="form1" @bind="@Model.DesiredSalary">
                <label for="form1" class="color-highlight">Name</label>
            </div>
            <div class="input-style has-borders no-icon">
                <h5>@L("Hình thức làm việc")</h5>
                <select class="form-control" @bind="@Model.FormOfWorkId">
                    @foreach (var item in FormOfWork)
                    {

                        <option value="@item.Id">
                            @item.DisplayName
                        </option>


                    }
                </select>
            </div>
            <div class="input-style has-borders no-icon">
                <h5>@L("Nơi muốn làm việc")</h5>
                <select class="form-control" @bind="@Model.WorkSite">
                    @foreach (var item in WorkSite)
                    {
                        <option value="@item.Id">
                            @item.DisplayName
                        </option>
                    }
                </select>
            </div>
            <div class="input-style has-borders no-icon mb-4">
                <textarea id="form7" @bind="Model.Career"></textarea>
                <label for="form7" class="color-highlight">@L("Mục tiêu")</label>
                <em class="mt-n3">(bắt buộc)</em>
            </div>
            <div class="form-check icon-check">
                <input class="form-check-input" type="checkbox" id="check1" @bind="Model.IsPublished">
                <label class="form-check-label" for="check1">@L("Đặt làm hồ sơ chính")</label>
                <i class="icon-check-1 fa fa-square color-gray-dark font-16"></i>
                <i class="icon-check-2 fa fa-check-square font-16 color-highlight"></i>
            </div>
            @* <div class="d-flex justify-content-center"> *@
                @* <a data-menu="modal-wizard-step-2" class="btn btn-full btn-m rounded-m border-blue-dark color-blue-dark bg-theme font-700 text-uppercase mt-4 mb-4 me-2 ms-2" @onclick="Hide">Hủy</a> *@
                <a data-menu="modal-wizard-step-2" class="btn btn-full btn-m rounded-m bg-blue-dark font-700 text-uppercase mt-4 mb-4 me-2 ms-2" @onclick="SaveJob">Lưu</a>
            @* </div> *@
        }
    </div>
</div>
