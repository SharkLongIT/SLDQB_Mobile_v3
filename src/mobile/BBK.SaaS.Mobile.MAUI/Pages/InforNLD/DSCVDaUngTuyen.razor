<Virtualize @ref="ApplicationRequestContainer" Context="application" ItemsProvider="@LoadApplicationRequest" ItemSize="100">
    <div class="card job-recruitment mt-2">
        <div class="align-items-center">
            <div class="row vieclam">
                <div class="col-12">
                    <div class="d-flex">
                      
                        <h5 class="mt-3 name-job">
                            @application.Recruitment.Title
                        </h5>
                        <div class="display-action">
                            <i class="material-icons" @onclick="(() => DisPlayAction(application))">more_vert</i>
                        </div>
                    </div>
                    @* <a href="javascript:;" @onclick="(() => ViewCompany(application))"> *@
                    <p class="company">Tên công ty: @application.Recruitment.Recruiter.CompanyName</p>
                    @* </a> *@
                    <p class="job-title">Tên hồ sơ ứng tuyển: @application.JobApplication.Title</p>
                    <p class="rank">Vị trí ứng tuyển: @application.Recruitment.Ranks.DisplayName</p>
                    <p class="ex">Ngày ứng tuyển: @application.CreationTime.ToString("dd/MM/yyyy")</p>
                    @if (application.Status == 1)
                    {
                        <p>
                            Trạng thái:
                            <span class="applying">
                                Đang ứng tuyển
                            </span>
                        </p>
                    }
                    else if (application.Status == 2)
                    {
                        <p>
                            Trạng thái:
                            <span class="seen">
                                NTD đã xem
                            </span>
                        </p>
                    }
                    else if (application.Status == 3)
                    {
                        <p>
                            Trạng thái:
                            <span class="fit">
                                Hồ sơ phù hợp
                            </span>
                        </p>
                    }
                    else
                    {
                        <p>
                            Trạng thái:
                            <span class="undefined">
                                Chưa xác định
                            </span>
                        </p>
                    }
                </div>

            </div>
        </div>
    </div>
</Virtualize>
