@if (isError)
{
    <div class="text-error">
        <i class='fas fa-search search-icon'></i>
        <h3>Không tìm thấy kết quả!!!</h3>
        <span class="mt-2">Thử tìm kiếm với từ khoá khác.</span>
    </div>
}
else
{
    <Virtualize @ref="IntroduceContainer" Context="introduce" ItemsProvider="@LoadIntroduce" ItemSize="100">
        <div class="row introduce-card align-items-center mt-1 m-0">
            <div class="col-xl-12">
                <div class="justify-content-center">
                    <div class="card job-recruitment mt-2">
                        <div class="align-items-center">
                            <div class="row vieclam p-2">
                                <div>
                                    <div class="d-flex">
                                        <h5 class="mt-3 name-job">
                                            @introduce.Article.Title
                                        </h5>
                                        <span class="ml-auto more_vert">
                                            <i class="material-icons" @onclick="(() => DisPlayAction(introduce))">more_vert</i>
                                        </span>
                                    </div>
                                    <div class="company">
                                        <span class="fullname">
                                            Tên liên hệ:
                                        </span>
                                        @introduce.FullName
                                    </div>
                                    <div class="map">
                                        <span class="phone">
                                            Số điện thoại:
                                        </span>
                                        @introduce.Phone
                                    </div>
                                    <div class="email">
                                        <span class="gmail">
                                            Email:
                                        </span>
                                        @introduce.Email
                                    </div>
                                    <div class="date">
                                        <span class="date-introduce">
                                            Ngày giới thiệu:
                                        </span>
                                        @introduce.CreationTime.ToString("dd/MM/yyyy")
                                    </div>
                                    @if (introduce.Status == 1)
                                    {
                                        <div class="">
                                            <span class="status">
                                                Trạng thái :
                                            </span>
                                            <span class="wait-progres">
                                                Chờ xử lý
                                            </span>
                                        </div>
                                    }
                                    else if (introduce.Status == 2)
                                    {
                                        <div class="">
                                            <span class="status">
                                                Trạng thái :
                                            </span>
                                            <span class="processed">
                                                Đã xử lý
                                            </span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="">
                                            <span class="status">
                                                Trạng thái :
                                            </span>
                                            <span class="unconnected">
                                                Không liên lạc được
                                            </span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Virtualize>
}
<BBK.SaaS.Mobile.MAUI.Pages.InforNTD.IntroduceDetailModal OnSave="RefeshList" @ref="introduceDetailModal"></BBK.SaaS.Mobile.MAUI.Pages.InforNTD.IntroduceDetailModal>

