@if (isError)
{
    <div class="text-error">
        <i class='fas fa-search search-icon'></i>
        <h3>Không tìm thấy kết quả!!!</h3>
        <span class="mt-2">Thử tìm kiếm với từ khoá khác.</span>
    </div>
}
else
{
    <Virtualize @ref="makeAnAppointmentContainer" Context="appointment" ItemsProvider="@LoadListMakeAnAppointment" ItemSize="100">
        <div class="row align-items-center mt-1 m-0">
            <div class="col-xl-12">
                <div class="align-items-center mt-2">
                    <div class="card appoitment">
                        <div class="row vieclam">
                            <div class="col-10">
                                <div class="d-flex justify-content-end">
                                </div>

                                <h5 class="name-job">
                                    Tên công việc:
                                    <span style="text-transform: capitalize;">
                                        @appointment.Recruitment.Title
                                    </span> 
                                </h5>

                                <div class="mb-2">
                                    <span class="company">
                                        Tên công ty:
                                    </span>
                                    <span>
                                        @appointment.Recruiter.CompanyName
                                    </span>
                                </div>
                                <div class="mb-2">
                                    <span class="name-job">
                                        Tên hồ sơ ứng tuyển:
                                    </span>
                                    <span>
                                        @appointment.Recruitment.Title
                                    </span>
                                </div>
                                <div class="mb-2">
                                    <span class="rank">
                                        Vị trí ứng tuyển:
                                    </span>
                                    <span>
                                        @appointment.Ranks.DisplayName
                                    </span>
                                </div>
                                <div class="mb-2">
                                    <span class="interview">
                                        Ngày hẹn:
                                    </span>
                                    <span>
                                        @appointment.InterviewTime.ToString("dd/MM/yyyy")
                                    </span>
                                </div>
                                <div class="mb-2">
                                    <span class="typeInterview">
                                        Ngày hẹn:
                                    </span>
                                    <span>
                                        @appointment.TypeInterview
                                    </span>
                                </div>
                                @if (appointment.StatusOfCandidate == 1)
                                {
                                    <div class="mb-2">
                                        <span class="result">
                                            Kết quả :
                                        </span>
                                        <span class="wait">
                                            Chờ phỏng vấn
                                        </span>
                                    </div>
                                }
                                else if (appointment.StatusOfCandidate == 2)
                                {
                                    <div class="mb-2">
                                        <span class="result">
                                            Kết quả :
                                        </span>
                                        <span class="accept">
                                            Xác nhận phỏng vấn
                                        </span>
                                    </div>

                                }
                                else if (appointment.StatusOfCandidate == 3)
                                {
                                    <div class="mb-2">
                                        <span class="result">
                                            Kết quả :
                                        </span>
                                        <span class="refuse">
                                            Từ chối phỏng vấn
                                        </span>
                                    </div>

                                }
                                else
                                {
                                    <div class="mb-2">
                                        <span class="result">
                                            Kết quả :
                                        </span>
                                        <span class="interviewed">
                                            Đã phỏng vấn
                                        </span>
                                    </div>
                                }
                                @if (appointment.InterviewResultLetter == 0)
                                {
                                    <div class="mb-2">
                                        <span class="status">
                                            Trạng thái phỏng vấn:
                                        </span>
                                        <span class="no-point">
                                            Chưa có kết quả
                                        </span>
                                    </div>

                                }
                                else if (appointment.InterviewResultLetter == 1)
                                {
                                    <div class="mb-2">
                                        <span class="status">
                                            Trạng thái phỏng vấn:
                                        </span>
                                        <span class="pass">
                                            Đỗ
                                        </span>
                                    </div>
                                }
                                else
                                {
                                    <div class="mb-2">
                                        <span class="status">
                                            Trạng thái phỏng vấn:
                                        </span>
                                        <span class="fail">
                                            Trượt
                                        </span>
                                    </div>
                                }
                            </div>
                            <div class="col-2">
                                <span>
                                    <i class="material-icons" @onclick="(()=>UpdateStatus(appointment))">more_vert</i>
                                </span>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Virtualize>
}
<ChiTietLHModal OnSave="RefeshList" @ref=chiTietLHModal></ChiTietLHModal>