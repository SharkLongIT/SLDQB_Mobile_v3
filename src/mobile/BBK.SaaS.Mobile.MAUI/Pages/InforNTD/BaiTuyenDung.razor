    @using BBK.SaaS.Services.Navigation
@inherits SaaSMainLayoutPageComponentBase
@attribute [Route("/" + NavigationUrlConsts.BaiTuyenDung)]


<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<div class="row align-items-center mt-1 m-0 ">
    <div class="col-xl-12">
        <div class="align-items-center">
            <div class="input-group">
                <input type="search" id="searchInput" @bind="_filter.Filtered" class="form-control input-filter" placeholder="@L("Nhập từ khoá cần tìm kiếm")">
                <button @onclick="RefeshList" class="btn btn-filter" type="button">
                    <i style="color: white" class="fa fa-search" aria-label="Search"></i>
                </button>
            </div>
        </div>
    </div>
</div>
<div class="container">


    @if (isError)
    {
        <div class="text-error">
            <i class='fas fa-search search-icon'></i>
            <h3>Không tìm thấy kết quả!!!</h3>
            <span class="mt-2">Thử tìm kiếm với từ khoá khác.</span>
        </div>
    }
    else
    {
        <Virtualize @ref="RecruitmentContrainer" Context="post" ItemsProvider="@LoadRecruitmentPost" ItemSize="100">
            <div class="card job-recruitment mt-2">
                <div class="align-items-center">
                    <div class="d-flex">
                        <div>
                            <img class="img-recruitment" src="@post.Recruiter.AvatarUrl" alt="image">
                        </div>
                        <div class="ms-3 ml-3">
                            <a href="javascript:;" @onclick="(() => ViewRecruitment(post))">
                                <h5 class="mt-3 name-job">
                                    @post.Title
                                </h5>
                                <p class="company">@post.Recruiter.CompanyName</p>
                                <div class="d-flex">
                                    <div class="d-flex">
                                        <p class="salary">
                                            @{
                                                var minSalaryInMillion = Math.Truncate(post.MinSalary / 1000000);
                                                var maxSalaryInMillion = Math.Truncate(post.MaxSalary / 1000000);
                                            }
                                            @minSalaryInMillion - @maxSalaryInMillion triệu
                                        </p>
                                    </div>
                                    <p class="map ml-2">@post.WorkAddress</p>
                                </div>
                                <div class="d-flex">
                                    <p class="ex">@post.Experiences.DisplayName</p>
                                </div>
                            </a>
                        </div>

                    </div>
                    <hr />
                    <div class="d-flex ml-3">
                        <span class="material-icons watch">
                            watch_later
                        </span>
                        <div>
                            @{
                                DateTime deadline = post.DeadlineSubmission;
                                DateTime currentDate = DateTime.Now.Date;

                                if (deadline < currentDate)
                                {
                                    <p class="deadline">
                                        <span class="time-deadline">Đã hết hạn ứng tuyển</span> 
                                    </p>
                                }
                                else
                                {
                                    TimeSpan difference = deadline.Date - currentDate;
                                    int daysRemaining = difference.Days;
                                    <p class="deadline">
                                        Còn<span class="time-deadline">@daysRemaining</span> ngày để ứng tuyển
                                    </p>
                                }
                            }

                        </div>
                    </div>
                </div>
            </div>
        </Virtualize>
    }
</div>
<div class="fab-container">
    <button class="fab-button" @onclick="OpenCreateModal">+</button>
</div>
<CreateRecruitmentModal OnSave="RefeshList" @ref="createRecruitmentModal"></CreateRecruitmentModal>
<UpdateRecruimentModal OnSave="RefeshList" @ref="updateRecruitmentModal"></UpdateRecruimentModal>