@using BBK.SaaS.Services.Navigation
@inherits SaaSMainLayoutPageComponentBase
@attribute [Route("/" + NavigationUrlConsts.DanhSachUVDUT)]

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<div class="row align-items-center mt-1 m-0 ">
    <div class="col-xl-12">
        <div class="align-items-center">
            <div class="card">
                <div class="card-body filter">
                    <input type="search" id="searchInput" @bind="_filter.Search" class="form-control input-filter" placeholder="@L("Nhập từ khoá cần tìm kiếm")">
                    <br />
                    <select required="" class="form-control" id="Status" name="Status" @bind="_filter.Status">
                        <option value="" selected>Trạng thái</option>
                        <option value="1">Đã ứng tuyển</option>
                        <option value="2">NTD đã xem</option>
                        <option value="3">Hồ sơ phù hợp</option>
                    </select>
                    <div class="mt-3  d-flex justify-content-center">
                        <button @onclick="RefeshList" class="btn btn-filter" type="button">
                            <i class="fa fa-search" style="color: white" aria-label="Search"></i>
                        </button>
                        @if (_IsCancelList == true)
                        {
                            <button @onclick="CancelList" class="btn btn-secondary ml-2" type="button">
                                Huỷ
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@if (isError)
{
    <div class="text-error">
        <i class='fas fa-search search-icon'></i>
        <h3>Không tìm thấy kết quả!!!</h3>
        <span class="mt-2">Thử tìm kiếm với từ khoá khác.</span>
    </div>
}
else
{
    <Virtualize @ref="ApplicationRequestContainer" Context="application" ItemsProvider="@LoadApplicationRequest" ItemSize="100">
        <div class="row align-items-center mt-1 m-0">
            <div class="col-xl-12">
                <div class="align-items-center mt-2">
                    <div class="card application">
                        <div class="row vieclam p-3">
                            <div class="col-10">
                                <a href="javascript:;" @onclick="(() => ViewApplication(application))">

                                    <h5 class="mt-3 name-job">
                                        Tên công việc:
                                        <span class=" name-job">
                                            @application.Recruitment.Title
                                        </span>
                                    </h5>
                                    <div class="mb-2">
                                        <span class="name">Vị trí:</span>
                                        <span>
                                            @application.Recruitment.Ranks.DisplayName
                                        </span>
                                    </div>
                                    <div class="mb-2">
                                        <span class="name">Tên ứng viên:</span>
                                        <span>
                                            @application.JobApplication.Candidate.Account.Name
                                        </span>
                                    </div>
                                    <div class="mb-2">
                                        <span class="name">Ngày ứng tuyển:</span>
                                        <span>
                                            @application.CreationTime
                                        </span>
                                    </div>
                                    <div class="mb-2">
                                        <span class="name">Kinh nghiệm:</span>
                                        <span>
                                            @application.Recruitment.Experiences.DisplayName
                                        </span>
                                    </div>
                                    <div class="mb-2">
                                        <span class="name">Tin nhắn:</span>
                                        <span>
                                            @application.Content
                                        </span>
                                    </div>
                                    @if (application.Status == 1)
                                    {
                                        <div>
                                            <span class="name">
                                                Trạng thái:
                                            </span>
                                            <span class="applying">
                                                Đang ứng tuyển
                                            </span>
                                        </div>
                                    }
                                    else if (application.Status == 2)
                                    {
                                        <div>
                                            <span class="name">
                                                Trạng thái:
                                            </span>
                                            <span class="seen">
                                                NTD đã xem
                                            </span>
                                        </div>
                                    }
                                    else if (application.Status == 3)
                                    {
                                        <div>
                                            <span class="name">
                                                Trạng thái:
                                            </span>
                                            <span class="fit">
                                                Hồ sơ phù hợp
                                            </span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div>
                                            <span class="name">
                                                Trạng thái:
                                            </span>
                                            <span class="undefined">
                                                Chưa xác định
                                            </span>
                                        </div>
                                    }


                                </a>
                            </div>
                            <div class="col-2">
                                <span>
                                    <i class="material-icons" @onclick="(() => DisPlayAction(application))">more_vert</i>
                                </span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">

                            @*  <a href="javascript:;" class="book-job btn btn-danger mt-1 mb-2" @onclick="(() => BookUser(application))">
                        Đặt lịch
                        </a>
                        <a href="javascript:;" class="book-job btn btn-danger mt-1 ml-2 mb-2" @onclick="(() => Delete(application))">
                        Xoá
                        </a> *@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Virtualize>
}
<DatLich OnSave="RefeshList" @ref="datLich"></DatLich>
