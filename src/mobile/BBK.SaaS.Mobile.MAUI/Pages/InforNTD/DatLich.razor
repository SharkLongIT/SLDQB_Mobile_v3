@inherits ModalBase
<div class="modal fade" id="@ModalId" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded">
            <div class="modal-body scroll-y pt-10 pb-10">
                @if (_isInitialized)
                {
                    <div class="mb-13 text-center">
                        <h1 class="mb-3">@L("Đặt lịch phỏng vấn ")</h1>
                    </div>
                    <div class="card shadow-sm p-0 m-0">
                        <div class="card-body d-flex flex-column py-10 m-0">
                            <div class="d-flex flex-column mb-8 fv-row fv-plugins-icon-container ">
                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2">
                                    <span class="required">
                                        @L("Công việc mời phỏng vấn")
                                    </span>
                                    <i class="fas fa-exclamation-circle ms-2 fs-7"></i>
                                </label>
                                <input type="text" class="form-control form-control-solid" placeholder="@RecruitmentTitle " disabled/>
                            </div>
                            <div class="d-flex flex-column mb-8 fv-row fv-plugins-icon-container min-w-90">
                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2">
                                    <span class="required">
                                        @L("Nhập hình thức phỏng vấn")
                                    </span>
                                    <i class="fas fa-exclamation-circle ms-2 fs-7"></i>
                                </label>
                                <input type="text" class="form-control form-control-solid" @bind="Model.TypeInterview " />
                            </div>
                            <div class="d-flex flex-column mb-8 fv-row fv-plugins-icon-container min-w-90">
                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2">
                                    <span class="required">
                                        @L("Nhập địa chỉ phỏng vấn")
                                    </span>
                                    <i class="fas fa-exclamation-circle ms-2 fs-7"></i>
                                </label>
                                <input type="text" class="form-control form-control-solid" @bind="Model.Address " />
                            </div>
                            <div class="d-flex flex-column mb-8 fv-row fv-plugins-icon-container min-w-90">
                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2">
                                    <span class="required">
                                        @L("Vị trí phỏng vấn")
                                    </span>
                                    <i class="fas fa-exclamation-circle ms-2 fs-7"></i>
                                </label>
                                <input class="form-control" placeholder="@RanksName" disabled />
                            </div>
                            <div class="d-flex flex-column mb-8 fv-row fv-plugins-icon-container min-w-90">
                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2">
                                    <span class="required">
                                        @L("Thời gian phỏng vấn")
                                    </span>
                                    <i class="fas fa-exclamation-circle ms-2 fs-7"></i>
                                </label>
                                <input type="datetime-local" class="form-control form-control-solid" @bind="Model.InterviewTime" />
                            </div>
                            <div class="d-flex flex-column fv-row fv-plugins-icon-container min-w-90">
                                <label class="d-flex align-items-center fs-6 fw-semibold mb-2">
                                    <span>
                                        @L("Lời nhắn")
                                    </span>
                                </label>
                                <textarea type="text" class="form-control form-control-solid" style="height: 70px;" @bind="Model.Message" />
                            </div>
                        </div>
                    </div>
                    <div class="text-center mt-8">
                        <button type="reset" data-dismiss="modal" class="btn btn-light me-3" @onclick="Hide">@L("Đóng")</button>
                        <button type="button" class="btn " style="background-color:#00b14f" @onclick="SaveBookJob">
                            <span class="indicator-label" style="color:white">@L("Đặt lịch")</span>
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
