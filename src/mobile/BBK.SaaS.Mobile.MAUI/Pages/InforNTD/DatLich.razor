@inherits ModalBase

<div id="@ModalId" class="menu menu-box-modal rounded-m" data-menu-width="330">
    <div class="content">
        @if (_isInitialized)
        {
            <h1>@L("Đặt lịch phỏng vấn")</h1>
            <h5>  @L("Công việc mời phỏng vấn")</h5>
            <div class="input-style has-borders no-icon validate-field mb-4 input-style-active">
                <input type="text" class="form-control validate-text" id="form1" @bind="RecruitmentTitle" disabled>
            </div>
            <h5> @L("Nhập hình thức phỏng vấn")</h5>
            <div class="input-style has-borders no-icon validate-field mb-4 input-style-active">
                <input type="text" class="form-control validate-text" id="form1" @bind="Model.TypeInterview">
                <em>(required)</em>
            </div>
            <h5> @L("Nhập địa chỉ phỏng vấn")</h5>
            <div class="input-style has-borders no-icon validate-field mb-4 input-style-active">
                <input type="text" class="form-control validate-text" id="form1" @bind="Model.Address">
                <em>(required)</em>
            </div>
            <h5>  @L("Vị trí phỏng vấn")</h5>
            <div class="input-style has-borders no-icon validate-field mb-4 input-style-active">
                <input type="text" class="form-control validate-text" id="form1" placeholder="@RanksName" disabled>
                <em>(required)</em>
            </div>
            <h5>  @L("Thời gian phỏng vấn")</h5>
            <div class="input-style has-borders no-icon mb-4">
                <input type="datetime-local" class="" @bind="Model.InterviewTime" />
            </div>
            <div class="input-style has-borders no-icon mb-4">
                <textarea id="form7" @bind="Model.Message"></textarea>
                <label for="form7" class="color-highlight">@L("Lời nhắn")</label>
                <em class="mt-n3">(required)</em>
            </div>
            <div class="d-flex justify-content-center">
                <a data-menu="modal-wizard-step-2" class="btn btn-full btn-m rounded-m border-blue-dark color-blue-dark bg-theme font-700 text-uppercase mt-4 mb-4 me-2 ms-2" @onclick="Hide">Đóng</a>
                <a data-menu="modal-wizard-step-2" class="btn btn-full btn-m rounded-m bg-blue-dark font-700 text-uppercase mt-4 mb-4 me-2 ms-2" @onclick="SaveBookJob">Lưu</a>
            </div>
        }
    </div>
</div>
