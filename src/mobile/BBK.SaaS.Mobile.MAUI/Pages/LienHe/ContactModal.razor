@inherits ModalBase
<div class="modal fade" id="@ModalId" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded">
            <div class="modal-body scroll-y pt-10 pb-10">
                @if (_isInitialized)
                {
                    <div class="btn btn-sm btn-icon btn-active-color-primary position-absolute" style="top:20px;right:20px" data-bs-dismiss="modal">
                        <span class="svg-icon svg-icon-1">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="currentColor"></rect>
                                <rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="currentColor"></rect>
                            </svg>
                        </span>
                    </div>
                      <div class="mb-13 text-center">
                        <h1 class="mb-3">@L("Liên hệ hỏi đáp")</h1>
                    </div>
                    <div>
                        <label class="form-label d-flex">
                            <span class="required">
                                @L("Họ và tên")
                            </span>
                            <i class="fas fa-exclamation-circle ms-2 fs-7"></i>
                        </label>
                        <input id="fullname" class="form-control" placeholder="Nhập họ và tên" @bind="Model.FullName" />
                    </div>
                    <div class="mt-3">
                        <label class="form-label d-flex">
                            <span class="required">
                                @L("Email")
                            </span>
                            <i class="fas fa-exclamation-circle ms-2 fs-7"></i>
                        </label>
                        <input id="email" type="email" class="form-control" placeholder="Nhập Email" @bind="Model.Email" />
                    </div>
                    <div class="mt-3">
                        <label class="form-label d-flex">
                            <span class="required">
                                @L("Số điện thoại")
                            </span>
                            <i class="fas fa-exclamation-circle ms-2 fs-7"></i>
                        </label>
                        <input id="phone" type="number" class="form-control" placeholder="Nhập số điện thoại" @bind="Model.Phone" />
                    </div>
                    <div class="mt-3">
                        <label class="form-label d-flex">
                            <span class="required">
                                @L("Nội dung")
                            </span>
                            <i class="fas fa-exclamation-circle ms-2 fs-7"></i>
                        </label>
                        <textarea id="description" class="form-control" @bind="Model.Description" style="height: 130px" />
                    </div>
                    <div class="d-flex justify-content-center mt-3">
                        <button type="reset" data-dismiss="modal" class="btn btn-light me-3" @onclick="Hide">@L("Đóng")</button>

                        <button class="btn" style="background-color: #00b14f" id="sendButton" @onclick="SendMail">
                            <span style="color: white" class="indicator-label">Gửi</span>
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>