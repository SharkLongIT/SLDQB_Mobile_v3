    <div class="card card-style contact-form">
        <div class="content">
            <fieldset>
                <div class="form-field form-name">
                    <label class="contactNameField color-theme form-label d-flex" for="contactNameField">
                        <span class="required">
                            @L("Họ và tên")
                        </span>
                        <i class="fas fa-exclamation-circle ms-2 fs-7"></i>
                    </label>
                    <input type="text" name="contactNameField" @bind="Model.FullName" class="round-small" id="contactNameField" />
                </div>
                <div class="form-field form-email">
                    <label class="contactEmailField color-theme" for="contactEmailField">
                        <span class="required">
                            @L("Email")
                        </span>
                        <i class="fas fa-exclamation-circle ms-2 fs-7"></i>
                    </label>
                    <input type="text" name="contactEmailField" @bind="Model.Email" class="round-small" id="contactEmailField" />
                </div>
                <div class="form-field form-name">
                    <label class="contactNameField color-theme" for="contactNameField">
                        <span class="required">
                            @L("Số điện thoại")
                        </span>
                        <i class="fas fa-exclamation-circle ms-2 fs-7"></i>
                    </label>
                    <input type="text" name="contactNameField" @bind="Model.Phone" class="round-small" id="contactNameField" />
                </div>
                <div class="form-field form-text">
                    <label class="contactMessageTextarea color-theme" for="contactMessageTextarea">
                        <span class="required">
                            @L("Nội dung")
                        </span>
                        <i class="fas fa-exclamation-circle ms-2 fs-7"></i>
                    </label>
                    <textarea name="contactMessageTextarea" class="round-small" @bind="Model.Description" id="contactMessageTextarea"></textarea>
                </div>
                <div class="form-button">
                    <input @onclick="SendMail" type="submit" class="btn bg-highlight text-uppercase font-900 btn-m btn-full rounded-sm  shadow-xl contactSubmitButton" value="Gửi" data-formId="contactForm" />
                </div>
            </fieldset>
