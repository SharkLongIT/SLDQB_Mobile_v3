@using Abp.UI;
@using BBK.SaaS.Services.Navigation
@inherits SaaSMainLayoutPageComponentBase
@attribute [Route("/ArticleDetail")]


<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/test1.css">
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
</head>
<div class="body">
    @if (_IsInitialication == true)
    {
        <div class="container">
            <div class="row">
                <!--Chi tiết bài viết-->
                <div class="post-detail">
                    <img class="mt-2 mb-3" src="@Model.PrimaryImageUrl" width="100%" height="250px" />
                    <h4>@Model.Title</h4>
                    <div class="user-img">
                        <div>
                            <div class="d-flex">
                                <div>
                                    <span class="tacgia">
                                        @Model.Author
                                    </span>
                                </div>
                                <div>
                                    <div class="d-flex">
                                        <span class="ml-4 mt-1" style="font-size: 0.8rem">@Model.ViewedCount lượt xem</span>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <span style="font-size: 0.8rem"> @Model.LastModificationTime.ToString("dd/MM/yyyy HH:mm") </span>
                            </div>
                        </div>

                    </div>
                    <a class="view-detail btn btn-danger" @onclick="Introduce">
                        Giới thiệu
                    </a>
                    <h2 class="mt-4">@Model.MetaDescription</h2>
                    <div class="body-sumernote mt-3">
                        @htmlContent1
                    </div>
                </div>
                <!--Bài viết cùng chuyên mục-->
                <div class="post-category mt-3">

                    <h4>Tin cùng chuyên mục</h4>
                    @if (_IsInitLoadOther == true)
                    {
                        <Virtualize @ref="ArticlesContainer" Context="articles" ItemsProvider="@LoadOtherArticles" ItemSize="100">
                            <a href="javascript:;" @onclick="(() => ViewArticle(articles))">
                                <div class="card article">
                                    <div class="d-flex">
                                        <div>
                                            <img class="card-img-top" src="@articles.PrimaryImageUrl" />
                                        </div>
                                        <div class="ms-3">
                                            <div class="title">
                                                <h4>@articles.Title</h4>
                                            </div>
                                            <div class="author">
                                                <span>@articles.Author</span>
                                            </div>
                                            <div class="short-desc">
                                                <span>@articles.ShortDesc</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </Virtualize>
                        <div class="view-all">
                            <a class="btn" @onclick="RedirectOtherArticles">Xem thêm</a>
                        </div>
                    }
                    else
                    {
                        <p style="font-size: 15px;"> Không có tin nào cùng chuyên mục</p>
                    }

                </div>


                <!--Bài mới nhất-->
                <div class="mt-3">
                    <h4>Tin tức mới nhất</h4>
                    <Virtualize @ref="ArticlesContainer" Context="articles" ItemsProvider="@LoadNewArticles" ItemSize="100">
                        <a href="javascript:;" @onclick="(() => ViewArticle(articles))">
                            <div class="card article">
                                <div class="d-flex">
                                    <div>
                                        <img class="card-img-top" src="@articles.PrimaryImageUrl" />
                                    </div>
                                    <div class="ms-3">
                                        <div class="title">
                                            <h4>@articles.Title</h4>
                                        </div>
                                        <div class="author">
                                            <span>@articles.Author</span>
                                        </div>
                                        <div class="short-desc">
                                            <span>@articles.ShortDesc</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </Virtualize>
                </div>
            </div>
        </div>
    }
    else
    {

    }

</div>
<IntroduceModal OnSave="RefeshList" @ref="introduceModal"></IntroduceModal>