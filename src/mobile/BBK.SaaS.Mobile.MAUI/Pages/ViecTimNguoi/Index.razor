    <div class="row align-items-center mt-3 mb-3 m-0 ">
        <div class="col-xl-12">
            <div class="align-items-center">
                <a href="/FilterVTN">
                    <div class="d-flex justify-content-end">
                        <i class="fa fa-sliders icon-filter-list"></i>
                        <span>Bộ lọc nâng cao</span>
                    </div>
                </a>
                <div class="input-group">
                    <input type="search" id="searchInput" @bind="_filter.Filtered" class="form-control input-filter" placeholder="@L("Nhập vị trí tuyển dụng")">
                    <button @onclick="RefeshList" class="btn btn-search" type="button">
                        <i class="fa fa-search" style="color:white" aria-label="Search"></i>
                    </button>
                </div>
                @*  <div class="d-flex mt-3">
                <input type="search" @bind="_filter.Salary" class="form-control input-filter" placeholder="@L("Nhập mức lương tối thiểu")" />
                <input type="search" @bind="_filter.SalaryMax" class="form-control input-filter ml-3" placeholder="@L("Nhập mức lương tối đa")" />
                </div> *@
            </div>
        </div>
    </div>



    @*  <div class="d-flex justify-content-center">
    @if (IsCancel == true)
    {
    <button @onclick="CancelList" id="cancel" class="btn btn-secondary ml-3" type="button">
    Xoá lọc
    </button>
    }
    </div> *@
    <div class="container">
        @if (isError)
        {
            <div class="text-error">
                <i class='fas fa-search search-icon'></i>
                <h3>Không tìm thấy kết quả!!!</h3>
                <span class="mt-2">Thử tìm kiếm với từ khoá khác.</span>
            </div>
        }
        else
        {
            <Virtualize @ref="RecruitmentContainer" Context="recruitment" ItemsProvider="@LoadRecruitment" ItemSize="100">
                <div class="card job-recruitment mt-2">
                    <div class="align-items-center">
                        <div class="d-flex">
                            <div>
                                <img class="img-recruitment" src="@recruitment.Recruiter.AvatarUrl" alt="image">
                            </div>
                            <div class="ms-3 ml-3">
                                <a href="javascript:;" @onclick="(() => ViewRecruitment(recruitment))">
                                    <h5 class="mt-3 name-job">
                                        @recruitment.Title
                                    </h5>
                                    <p class="company">@recruitment.Recruiter.CompanyName</p>
                                    <div class="d-flex">
                                        <div class="d-flex">
                                            <p class="salary">
                                                @{
                                                    var minSalaryInMillion = Math.Truncate(recruitment.MinSalary / 1000000);
                                                    var maxSalaryInMillion = Math.Truncate(recruitment.MaxSalary / 1000000);
                                                }
                                                @minSalaryInMillion - @maxSalaryInMillion triệu
                                            </p>
                                        </div>
                                        <p class="map ml-2">@recruitment.WorkAddress</p>
                                    </div>
                                    <div class="d-flex">
                                        <p class="ex">@recruitment.Experiences.DisplayName</p>
                                    </div>
                                </a>
                            </div>

                        </div>
                        <hr />
                        <div class="d-flex ml-3">
                            <span class="material-icons watch">
                                watch_later
                            </span>
                            <div>
                                @{
                                    DateTime deadline = recruitment.DeadlineSubmission;
                                    DateTime currentDate = DateTime.Now.Date;

                                    TimeSpan difference = deadline.Date - currentDate;
                                    int daysRemaining = difference.Days;
                                }
                                <p class="deadline">
                                    Còn<span class="time-deadline">@daysRemaining</span> ngày để ứng tuyển

                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </Virtualize>
        }
    </div>
</body>
</html>
