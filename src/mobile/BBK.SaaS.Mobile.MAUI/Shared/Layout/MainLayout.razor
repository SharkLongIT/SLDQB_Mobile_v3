@inherits LayoutComponentBase

@if (IsConfigurationsInitialized)
{
    <!--begin::App-->
    <div id="page">
        <!--begin::Page-->
        <!-- Top logo + menu -->
        <div class="header header-fixed header-logo-center mb-3" style="pointer-events: all;">
            <div class="d-flex">
                <div class="align-self-center ms-2">
                    <a href="/TrangChu">
                        <img src="images/QuangBinh/Trungtam_40.png">
                    </a>
                </div>
                <div class="align-self-center ms-auto mt-1 opening-menu" style="pointer-events: all;">
                    <a data-menu="menu-sidebar-left" class="icon icon-xs gradient-yellow rounded-s " @onclick="OpenSideBar">
                        <i class="fa fa-list color-white font-18"></i>
                    </a>
                </div>

            </div>
        </div>
        <!--end::Wrapper-->

        <div class="page-content header-clear-medium">
            @Body
            <div class="footer card mx-0">
                <a href="#" class="footer-title"><span class="color-highlight">Trung tâm DVVL Quảng Bình</span></a>
                <p class="footer-text mb-2">
                    <span><i class="fa fa-heart color-highlight font-16 ps-2 pe-2"></i>Hotline: 02323 7979898</span>
                    <br><i class="fa-solid fa-envelope color-highlight font-16 ps-2 pe-2"></i>
                    vieclamthanhnienquangbinh@gmail.com
                    <br><i class="fa-solid fa-location-dot color-highlight font-16 ps-2 pe-2"></i>42 Trần Quang Khải,
                    Đồng Phú, Đồng Hới, Quảng Bình
                </p>
                <p class="footer-copyright">
                    Copyright &copy; BBK Solution <span id="copyright-year">2024</span>. All
                    Rights
                    Reserved.
                </p>
                <p class="footer-links">
                    <a href="#" class="color-highlight">Chính sách</a> | <a href="#"
                                                                            class="color-highlight">Điều khoản sử dụng</a> | <a href="#"
                                                                                                                                class="back-to-top color-highlight"> Back to Top</a>
                </p>
                <div class="clear"></div>
            </div>
        </div>

        <!-- Sidebar-->
        <div id="menu-sidebar-left" class="bg-white menu menu-box-left" data-menu-width="320" data-menu-effect="menu-parallax" style="display: block;width: 320px;pointer-events: all;">
            <div class="pt-2">
                @if (HasUserInfo)
                {
                   @*  <div class="card card-style">
                        <div class="content d-flex">
                            <div class="me-2 align-self-center">
                                <img src="@_userImage" class="gradient-red rounded-sm" width="43">
                            </div>
                            <div class="flex-grow-1 align-self-center ps-2">
                                    <h1 class="font-20 font-700 mb-0">@ApplicationContext.LoginInfo.User.Name</h1>
                                @if (ApplicationContext.LoginInfo.User.UserType == Authorization.Users.UserTypeEnum.Type1)
                                {
                                    <p class="mt-n2 mb-0 font-10 font-400">Nhà tuyển dụng </p>
                                }
                                else
                                {
                                    <p class="mt-n2 mb-0 font-10 font-400">Ứng viên </p>

                                }
                            </div>
                        </div>
                    </div> *@
                    <NavMenu/>

                }
                else
                {
                    <div class="card card-style">
                        <div class="content d-flex">
                            <div class="me-2 align-self-center">
                                <img src="images/avatars/5s.png" class="gradient-red rounded-sm" width="43">
                            </div>
                            <div class="flex-grow-1 align-self-center ps-2">
                                <h1 class="font-20 font-700 mb-0">Họ và tên</h1>
                                <p class="mt-n2 mb-0 font-10 font-400">Nhà tuyển dụng / Ứng viên</p>
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (HasUserInfo && ApplicationContext.LoginInfo.User.UserType == Authorization.Users.UserTypeEnum.Type1)
            {
                <div class="card card-style">
                    <div class="content my-0">
                        <div class="list-group list-custom-small">
                            <a href="/InforNTD">
                                <span>Thông tin cá nhân</span>
                                <i class="fa fa-angle-right"></i>
                            </a>
                            <a href="/BaiTuyenDung">
                                <span>Danh sách tin tuyển dụng của tôi</span>
                                <i class="fa fa-angle-right"></i>
                            </a>
                            <a href="/DanhSachUVDUT">
                                <span>Danh sách ứng viên đã ứng tuyển</span>
                                <i class="fa fa-angle-right"></i>
                            </a>
                            <a href="/DSGioiThieu">
                                <span>Danh sách giới thiệu của tôi</span>
                                <i class="fa fa-angle-right"></i>
                            </a>
                            <a href="/DanhSachLichHen">
                                <span>Danh sách lịch hẹn</span>
                                <i class="fa fa-angle-right"></i>
                            </a>
                            <a href="DSCauHoi">
                                <span>Danh sách câu hỏi</span>
                                <i class="fa fa-angle-right"></i>
                            </a>
                            <a href="/Settings">
                                <span>Cài đặt</span>
                                <i class="fa fa-angle-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
            else if (HasUserInfo && ApplicationContext.LoginInfo.User.UserType == Authorization.Users.UserTypeEnum.Type2)
            {
                <div class="card card-style">
                    <div class="content my-0">
                        <h5 class="font-700 text-uppercase opacity-40 font-12 pt-2 mb-0">Hồ sơ cá nhân</h5>
                        <div class="list-group list-custom-small list-icon-0">
                            <div class="list-group list-custom-small">
                                <a href="/InforNLD">
                                    <span>Thông tin cá nhân</span>
                                    <i class="fa fa-angle-right"></i>
                                </a>
                                <a href="/BaiUngTuyen">
                                    <span>Danh sách hồ sơ ứng tuyển của tôi</span>
                                    <i class="fa fa-angle-right"></i>
                                </a>
                                <a href="DSCVDaUngTuyen">
                                    <span>Danh sách công việc đã ứng tuyển của tôi</span>
                                    <i class="fa fa-angle-right"></i>
                                </a>
                                <a href="/DSGT">
                                    <span>Danh sách giới thiệu của tôi</span>
                                    <i class="fa fa-angle-right"></i>
                                </a>
                                <a href="/DanhSachLH">
                                    <span>Danh sách lịch hẹn</span>
                                    <i class="fa fa-angle-right"></i>
                                </a>
                                <a href="/DanhSachCauHoi">
                                    <span>Danh sách câu hỏi</span>
                                    <i class="fa fa-angle-right"></i>
                                </a>
                                <a href="/Settings">
                                    <span>Cài đặt</span>
                                    <i class="fa fa-angle-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <div class="card card-style">
                <div class="content my-0">
                    <h5 class="font-700 text-uppercase opacity-40 font-12 pt-2 mb-0">Menu</h5>
                    <div class="list-group list-custom-small list-icon-0">
                        <a href="/TrangChu">
                            <i class="fa font-14 fa-home rounded-s bg-yellow-dark"></i>
                            <span>Trang chủ</span>
                            <i class="fa fa-angle-right"></i>
                        </a>
                        <a href="/Filter">
                            <i class="fa font-14 fa-search rounded-s bg-blue-dark"></i>
                            <span>Tìm kiếm</span>
                            <i class="fa fa-angle-right"></i>
                        </a>
                        <a href="/NguoiTimViec">
                            <i class="fa font-14 fa-user rounded-s bg-blue-dark"></i>
                            <span>Người tìm việc</span>
                            <i class="fa fa-angle-right"></i>
                        </a>
                        <a href="/ViecTimNguoi">
                            <i class="fa font-14 fa-briefcase rounded-s bg-brown-dark"></i>
                            <span>Việc tìm người</span>
                            <i class="fa fa-angle-right"></i>
                        </a>
                        <a href="/TinTuc">
                            <i class="fa font-14 fa-newspaper rounded-s bg-green-dark"></i>
                            <span>Dịch vụ</span>
                            <i class="fa fa-angle-right"></i>
                        </a>
                        <a href="/LienHe" class="border-0">
                            <i class="fa font-14 fa-question rounded-s bg-teal-dark"></i>
                            <span>Hỏi đáp</span>
                            <i class="fa fa-angle-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="card card-style">
                <div class="content my-0">
                    <h5 class="font-700 text-uppercase opacity-40 font-12 pt-2 mb-0">Dịch vụ</h5>
                    <div class="list-group list-custom-small list-icon-0">
                        @*   <span class="text-uppercase font-900 font-11 opacity-30">Dịch vụ</span> *@
                        <Virtualize @ref="CmsContainer" Context="cmsCats" ItemsProvider="@LoadCategories">
                            <a href="javascript:;" @onclick="(() => GetArticleByCategory(cmsCats))">
                                @* <i class="fa font-14 rounded-s bg-facebook"></i> *@
                                <span>@cmsCats.DisplayName</span>
                                <i class="fa fa-angle-right"></i>
                            </a>
                        </Virtualize>
                    </div>
                </div>
            </div>





            @if (!HasUserInfo)
            {
                <div class="card card-style">
                    <div class="content my-0">
                        <div class="list-group list-custom-small list-icon-0">
                            <a href="/Login" class="border-0">
                                <i class="fa font-14 fa-sign-out rounded-s bg-teal-dark"></i>
                                <span>Đăng nhập</span>
                                <i class="fa fa-angle-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
            @if (HasUserInfo)
            {
                <div class="card card-style">
                    <div class="content my-0">
                        <div class="list-group list-custom-small list-icon-0">
                            <a class="border-0" @onclick="Logout">
                                <i class="fa font-14 fa-sign-out rounded-s bg-teal-dark"></i>
                                <span>Đăng xuất</span>
                                <i class="fa fa-angle-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

}
