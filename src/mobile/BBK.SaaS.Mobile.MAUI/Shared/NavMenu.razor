@inject IJSRuntime JS
@inherits SaaSComponentBase
@using Abp.Collections.Extensions
@using BBK.SaaS.Models.NavigationMenu;

<div id="menu-sidebar-left" class="bg-white menu menu-box-left" data-menu-width="320"
	 data-menu-effect="menu-parallax">
	<div class="divider mb-3"></div>
	<div class="ps-3 pe-3 pt-2 mb-4">
		<div class="d-flex">
			<div class="me-2 align-self-center">
				<img src="images/avatars/5s.png" class="gradient-red rounded-sm" width="43">
			</div>
			<div class="flex-grow-1 align-self-center ps-2">
				<h1 class="font-20 font-700 mb-0">Họ và tên</h1>
				<p class="mt-n2 mb-0 font-10 font-400">Nhà tuyển dụng / Ứng viên</p>
			</div>
		</div>
	</div>

	<div class="divider divider-margins mb-0"></div>

	<div class="me-3 ms-3">
		<div class="list-group list-custom-small">
			<a href="#">
				<i class="fa font-14 fa-home rounded-s bg-yellow-dark"></i>
				<span>Trang chủ</span>
				<i class="fa fa-angle-right"></i>
			</a>
			<a href="#">
				<i class="fa font-14 fa-search rounded-s bg-blue-dark"></i>
				<span>Người tìm việc</span>
				<span class="badge bg-red-dark">NEW</span>
				<i class="fa fa-angle-right"></i>
			</a>
			<a href="#">
				<i class="fa font-14 fa-briefcase rounded-s bg-brown-dark"></i>
				<span>Việc tìm người</span>
				<i class="fa fa-angle-right"></i>
			</a>
			<a href="#">
				<i class="fa font-14 fa-camera rounded-s bg-green-dark"></i>
				<span>Tin tức</span>
				<i class="fa fa-angle-right"></i>
			</a>
			<a href="#" class="border-0">
				<i class="fa font-14 fa-image rounded-s bg-teal-dark"></i>
				<span>Hỏi đáp</span>
				<i class="fa fa-angle-right"></i>
			</a>
		</div>
	</div>

	<div class="me-3 ms-3 mt-4">
		<span class="text-uppercase font-900 font-11 opacity-30">Dịch vụ</span>
		<div class="list-group list-custom-small">
			<a href="#">
				<i class="fa font-14 fa-user-graduate rounded-s bg-facebook"></i>
				<span>Du học</span>
				<i class="fa fa-link"></i>
			</a>
			<a href="#">
				<i class="fa font-14 fa-plane rounded-s bg-twitter"></i>
				<span>Xuất khẩu lao động</span>
				<i class="fa fa-link"></i>
			</a>
			<a href="#" class="border-0">
				<i class="fab font-14 fa-instagram rounded-s bg-instagram"></i>
				<span>Cho thuê phòng họp</span>
				<i class="fa fa-link"></i>
			</a>
		</div>
	</div>

	<div class="me-3 ms-3 mt-4 pt-2">
		<span class="text-uppercase font-900 font-11 opacity-30">Account Settings</span>
		<div class="list-group list-custom-small">
			<a href="#" data-toggle-theme data-trigger-switch="switch-dark3-mode">
				<i class="fa font-12 fa-moon bg-gray-dark rounded-s"></i>
				<span>Dark Mode</span>
				<div class="custom-control small-switch ios-switch">
					<input data-toggle-theme type="checkbox" class="ios-input" id="switch-dark3-mode">
					<label class="custom-control-label" for="switch-dark3-mode"></label>
				</div>
				<i class="fa fa-angle-right"></i>
			</a>
			<a data-trigger-switch="sidebar-311-switch-2" href="#">
				<i class="fa font-14 fa-circle rounded-s bg-green-dark"></i>
				<span>Active Mode</span>
				<div class="custom-control small-switch ios-switch">
					<input type="checkbox" class="ios-input" id="sidebar-311-switch-2" checked>
					<label class="custom-control-label" for="sidebar-311-switch-2"></label>
				</div>
				<i class="fa fa-angle-right"></i>
			</a>
			<a data-trigger-switch="sidebar-31-switch-3" href="#" class="border-0">
				<i class="fa font-14 fa-bell rounded-s bg-blue-dark"></i>
				<span>Notifications</span>
				<div class="custom-control small-switch ios-switch">
					<input type="checkbox" class="ios-input" id="sidebar-31-switch-3" checked>
					<label class="custom-control-label" for="sidebar-31-switch-3"></label>
				</div>
				<i class="fa fa-angle-right"></i>
			</a>
		</div>
	</div>
</div>
@code {
    private Dictionary<string, object> GetMenuAttributes(NavigationMenuItem item)
    {
        if (item.Items.Any())
        {
            return new() {
                { "data-kt-menu-trigger", "click" }
            };
        }

        return new() { };
    }
}